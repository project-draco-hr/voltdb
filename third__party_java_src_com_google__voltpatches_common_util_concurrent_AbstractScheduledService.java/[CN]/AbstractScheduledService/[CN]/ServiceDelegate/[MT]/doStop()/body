{
  runningTask.cancel(false);
  executorService.execute(new Runnable(){
    @Override public void run(){
      try {
        lock.lock();
        try {
          if (state() != State.STOPPING) {
            return;
          }
          shutDown();
        }
  finally {
          lock.unlock();
        }
        notifyStopped();
      }
 catch (      Throwable t) {
        notifyFailed(t);
      }
    }
  }
);
}
