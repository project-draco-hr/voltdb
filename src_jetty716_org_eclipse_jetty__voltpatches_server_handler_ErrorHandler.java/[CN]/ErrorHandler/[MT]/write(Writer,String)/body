{
  if (string == null)   return;
  for (int i=0; i < string.length(); i++) {
    char c=string.charAt(i);
switch (c) {
case '&':
      writer.write("&amp;");
    break;
case '<':
  writer.write("&lt;");
break;
case '>':
writer.write("&gt;");
break;
default :
if (Character.isISOControl(c) && !Character.isWhitespace(c)) writer.write('?');
 else writer.write(c);
}
}
}
