{
  String hostnames[]=new String[]{"localhost"};
  ArrayList<String> hostnameList=new ArrayList<String>();
  if (args.length > 0) {
    for (    String arg : args) {
      String hostname=arg.trim();
      if ((hostname.length() == 0) || hostname.startsWith("${"))       continue;
      hostnameList.add(hostname);
    }
  }
  if (hostnameList.size() > 0)   hostnames=hostnameList.toArray(new String[0]);
  long now=System.currentTimeMillis();
  for (  String hostname : hostnames) {
    System.out.printf("Trying to connect to %s\n",hostname);
    System.out.flush();
    if (requestDump(hostname,now))     System.out.printf("Asyncronous dump in progress.\n");
 else     System.out.printf("Dump Failed. See stack trace.\n");
    System.out.flush();
  }
}
