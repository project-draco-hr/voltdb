{
  this.panel=new GUIPanel(this,db);
  NUM_ROWS=numRows;
  NUM_COLS=numCols;
  CELL_SIZE=cellSize;
  DELAY_MILLIS=delayInMillis;
  setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
  add(this.panel);
  setBounds(0,0,NUM_COLS * CELL_SIZE,NUM_ROWS * CELL_SIZE + OFFSET_FOR_TEXT);
  setVisible(true);
}
