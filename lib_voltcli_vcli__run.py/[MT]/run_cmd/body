def run_cmd(cmd, *args):
    'Run external program without capturing or suppressing output and check return code.'
    fullcmd = cmd
    for arg in args:
        if (len(arg.split()) > 1):
            fullcmd += (' "%s"' % arg)
        else:
            fullcmd += (' %s' % arg)
    if vcli_opt.dryrun:
        print fullcmd
    else:
        retcode = os.system(fullcmd)
        if (retcode != 0):
            vcli_util.abort(('return code %d: %s' % (retcode, fullcmd)))
