def get_required(self, section, option):
    if (not self.loaded):
        self.load()
    value = self.get(section, option)
    if (value is None):
        vcli_util.abort(('Configuration parameter "%s.%s" was not found.' % (section, option)), 'Set parameters using the "config" command, for example:', [('%s config %s.%s=VALUE' % (vcli_meta.bin_name, section, option))])
    return value
