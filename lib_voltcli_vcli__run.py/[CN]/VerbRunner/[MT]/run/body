def run(self, name, *args):
    '\n        Run a CLI command with arguments.\n        '
    runner = VerbRunner(name, self.options, self.config, args, self.primary, self.secondary, self.project_path)
    for verb in vcli_meta.verbs:
        if (verb.name == name):
            break
    else:
        self.abort(('Verb "%s" (being called by "%s") was not found.' % (name, self.name)))
    verb.execute(runner)
