def help(self, *args):
    '\n        Display help for command.\n        '
    for name in args:
        for verb in vcli_meta.verbs:
            if (verb.name == name):
                print ''
                parser = optparse.OptionParser(description=verb.metadata.description, usage=('%%prog %s %s' % (verb.name, verb.metadata.usage)))
                parser.print_help()
                print ''
                break
        else:
            vcli_util.error(('Verb "%s" was not found.' % verb.name))
