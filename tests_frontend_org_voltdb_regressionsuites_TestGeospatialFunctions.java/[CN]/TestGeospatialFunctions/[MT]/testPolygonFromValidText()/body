{
  Client client=getClient();
  populateBorders(client,invalidBorders);
  for (  Border b : invalidBorders) {
    String expectedPattern=b.getMessage();
    String sql=String.format("select polygonfromvalidtext('%s') from borders where pk = 100",b.getRegion().toWKT());
    verifyStmtFails(client,sql,expectedPattern);
  }
  for (  Border b : borders) {
    if (b.getRegion() != null) {
      String stmt=String.format("select polygonfromvalidtext('%s') from borders where pk = 100",b.getRegion().toWKT());
      ClientResponse cr=client.callProcedure("@AdHoc",stmt);
      assertEquals(ClientResponse.SUCCESS,cr.getStatus());
    }
  }
}
