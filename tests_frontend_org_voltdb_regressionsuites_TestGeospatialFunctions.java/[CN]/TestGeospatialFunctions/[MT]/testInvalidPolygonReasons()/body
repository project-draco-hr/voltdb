{
  Client client=getClient();
  populateBorders(client,invalidBorders);
  VoltTable vt=client.callProcedure("@AdHoc","select pk, name, isinvalidreason(region), message from borders").getResults()[0];
  while (vt.advanceRow()) {
    assertTrue(String.format("Border %s, Expected error message containing \"%s\" but got \"%s\"",vt.getString(1),vt.getString(3),vt.getString(2)),vt.getString(2).contains(vt.getString(3)));
  }
}
