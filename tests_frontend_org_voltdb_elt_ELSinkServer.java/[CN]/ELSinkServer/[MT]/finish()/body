{
  for (  VerificationStream vs : m_vstreams) {
    boolean notStopped=true;
    while (notStopped) {
      if (vs.isAlive()) {
        try {
          vs.join();
          notStopped=false;
        }
 catch (        InterruptedException e) {
        }
      }
 else {
        notStopped=false;
      }
    }
  }
}
