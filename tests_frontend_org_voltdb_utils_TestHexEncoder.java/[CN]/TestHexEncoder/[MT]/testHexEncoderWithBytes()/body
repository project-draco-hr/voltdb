{
  byte[] bytes=new byte[1024];
  new Random().nextBytes(bytes);
  for (int i=0; i < bytes.length; i++)   System.out.print(String.valueOf((int)bytes[i]) + " ");
  System.out.println();
  String hexText=HexEncoder.hexEncode(bytes);
  byte[] result=HexEncoder.hexDecode(hexText);
  for (int i=0; i < result.length; i++)   System.out.print(String.valueOf((int)result[i]) + " ");
  System.out.println();
  System.out.println(hexText);
  for (int i=0; i < bytes.length; i++)   assertEquals(bytes[i],result[i]);
}
