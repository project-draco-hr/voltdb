{
  boolean allIdle=false;
  client.callProcedure("@Quiesce");
  while (!allIdle) {
    allIdle=true;
    VoltTable[] vt=client.callProcedure("@SystemInformation");
    while (vt[0].advanceRow()) {
      if (vt[0].getString("key").equals("operStatus")) {
        if (vt[0].getString("value").equals("running")) {
          allIdle=false;
          break;
        }
      }
    }
  }
}
