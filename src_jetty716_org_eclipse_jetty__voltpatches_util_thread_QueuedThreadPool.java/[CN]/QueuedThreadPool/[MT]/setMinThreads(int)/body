{
  if (isStarted() && (minThreads <= 0 || minThreads > _maxThreads))   throw new IllegalArgumentException("!0<=minThreads<maxThreads");
  _minThreads=minThreads;
  int threads=_threadsStarted.get();
  while (isStarted() && threads < _minThreads) {
    startThread(threads);
    threads=_threadsStarted.get();
  }
}
