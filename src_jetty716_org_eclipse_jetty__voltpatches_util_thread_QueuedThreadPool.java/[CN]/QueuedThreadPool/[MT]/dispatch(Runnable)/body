{
  if (isRunning()) {
    final int jobQ=_jobs.size();
    final int idle=getIdleThreads();
    if (_jobs.offer(job)) {
      if (idle == 0 || jobQ > idle) {
        int threads=_threadsStarted.get();
        if (threads < _maxThreads)         startThread(threads);
      }
      return true;
    }
  }
  return false;
}
