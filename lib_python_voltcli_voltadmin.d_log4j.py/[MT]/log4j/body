@VOLT.Command(bundles=VOLT.AdminBundle(), description='Update the log4j configuration.', options=(), arguments=(VOLT.PathArgument('log4j_xml_path', 'the Log4J configuration file', exists=True),))
def log4j(runner):
    log4j_file = utility.File(runner.opts.log4j_xml_path)
    try:
        log4j_file.open()
        xml_text = log4j_file.read()
        response = runner.call_proc('@UpdateLogging', [VOLT.FastSerializer.VOLTTYPE_STRING], [xml_text])
        print response
    finally:
        log4j_file.close()
