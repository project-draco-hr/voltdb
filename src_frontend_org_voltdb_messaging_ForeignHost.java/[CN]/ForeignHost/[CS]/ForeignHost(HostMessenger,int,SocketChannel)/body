{
  m_hostMessenger=host;
  m_handler=new FHInputHandler();
  m_ipAddress=socket.socket().getInetAddress();
  m_tcpPort=socket.socket().getLocalPort();
  m_connection=host.getNetwork().registerChannel(socket,m_handler);
