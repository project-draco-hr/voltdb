def test_validate_memory_limit_negative(self):
    'ensure max java heap is not negative'
    response = requests.put(__url__, json={'cluster': {'kfactor': 2, 'sitesperhost': 1, }, 'systemsettings': {'resourcemonitor': {'memorylimit': {'size': (-1), }, }, }, })
    value = response.json()
    self.assertEqual(value['errors'][0], '-1 is less than the minimum of 0')
    self.assertEqual(response.status_code, 200)
