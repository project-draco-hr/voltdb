def test_validate_heart_beat_timeout_maximum(self):
    'ensure heart beat timeout is not greater than 35'
    maximum_value = 2147483648
    response = requests.put(__url__, json={'cluster': {'kfactor': 2, 'sitesperhost': 1, }, 'heartbeat': {'timeout': maximum_value, }, })
    value = response.json()
    self.assertEqual(value['errors'][0], (str(maximum_value) + ' is greater than the maximum of 2147483647'))
    self.assertEqual(response.status_code, 200)
