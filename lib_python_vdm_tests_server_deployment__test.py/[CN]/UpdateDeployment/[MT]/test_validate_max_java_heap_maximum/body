def test_validate_max_java_heap_maximum(self):
    'ensure max java heap is not greater than 35'
    maximum_value = 35
    response = requests.put(__url__, json={'cluster': {'kfactor': 2, 'sitesperhost': 1, }, 'heap': {'maxjavaheap': maximum_value, }, })
    value = response.json()
    self.assertEqual(value['errors'][0], (str(maximum_value) + ' is greater than the maximum of 32'))
    self.assertEqual(response.status_code, 200)
