def test_validate_query_timeout_maximum(self):
    'ensure query timeout is not greater than 2147483647'
    maximum_value = 2147483648
    response = requests.put(__url__, json={'cluster': {'kfactor': 2, 'sitesperhost': 1, }, 'systemsettings': {'query': {'timeout': maximum_value, }, }, })
    value = response.json()
    self.assertEqual(value['errors'][0], (str(maximum_value) + ' is greater than the maximum of 2147483647'))
    self.assertEqual(response.status_code, 200)
