def test_validate_ksafety_maximum(self):
    'ensure ksafety is not greater than 2'
    response = requests.get(__db_url__)
    value = response.json()
    if value:
        db_length = len(value['databases'])
        last_db_id = value['databases'][(db_length - 1)]['id']
        dep_url = ((__db_url__ + str(last_db_id)) + '/deployment/')
        maximum_value = 3
        headers = {'Content-Type': 'application/json; charset=UTF-8', }
        response = requests.put(dep_url, json={'cluster': {'kfactor': maximum_value, 'sitesperhost': 1, }, }, headers=headers)
        value = response.json()
        self.assertEqual(value['errors'][0], (str(maximum_value) + ' is greater than the maximum of 2'))
        self.assertEqual(response.status_code, 200)
