{
  assertMPPlanDeterminismNeedsOrdering("select X.a, X.z, Y.z from ptree X, punique Y where X.a = Y.a","order by 1, 2, 3");
  assertMPPlanDeterminismNeedsOrdering("select X.a l, X.z m, Y.z n from ptree X, punique Y where X.a = Y.a","order by Y.z, X.a, X.z","order by l, m, n");
  assertMPPlanDeterminismNeedsOrdering("select X.a, X.z, Y.z from ptree X, punique Y where X.a = Y.a","order by 3, 2, 1");
}
