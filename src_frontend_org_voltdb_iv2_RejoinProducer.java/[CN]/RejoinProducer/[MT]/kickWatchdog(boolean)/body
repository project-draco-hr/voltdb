{
synchronized (this) {
    REJOINLOG.debug(m_whoami + "Updating watchdog. Rearm: " + rearm);
    if (m_timeFuture != null) {
      m_timeFuture.cancel(false);
      m_timeFuture=null;
    }
    if (rearm) {
      m_timeFuture=VoltDB.instance().scheduleWork(new TimerCallback(m_whoami),60,0,TimeUnit.SECONDS);
    }
  }
}
