{
  String sql="SELECT DECODE(COALESCE(" + col2 + ","+ col1+ "),"+ col2+ ", 0, 1) "+ "FROM C_NULL WHERE ID = 2;";
  ClientResponse cr=cl.callProcedure("@AdHoc",sql);
  assertEquals(cr.getStatus(),ClientResponse.SUCCESS);
  VoltTable result=cr.getResults()[0];
  result.advanceRow();
  long rv=result.getLong(0);
  assertEquals(rv,0);
  sql="SELECT DECODE(COALESCE(" + col1 + ","+ col2+ "),"+ col1+ ", 0, 1) "+ "FROM C_NULL WHERE ID = 2;";
  cr=cl.callProcedure("@AdHoc",sql);
  assertEquals(cr.getStatus(),ClientResponse.SUCCESS);
  result=cr.getResults()[0];
  result.advanceRow();
  rv=result.getLong(0);
  assertEquals(rv,0);
}
