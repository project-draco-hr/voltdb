{
  Client client=getClient();
  ClientResponse cr;
  cr=client.callProcedure("JSBAD.insert",1,"{\"id\":1 \"bool\": false}");
  assertEquals(ClientResponse.SUCCESS,cr.getStatus());
  cr=client.callProcedure("JSBAD.insert",2,"{\"id\":2, \"bool\"; false, \"??????Vo\":\"????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????????\"}");
  assertEquals(ClientResponse.SUCCESS,cr.getStatus());
  try {
    cr=client.callProcedure("BadIdProc",1,"id","1");
    fail("document validity check failed");
  }
 catch (  ProcCallException pcex) {
    assertTrue(pcex.getMessage().contains("{\"id\":1 \"bool\": false} is not valid JSON"));
  }
  try {
    cr=client.callProcedure("BadIdProc",2,"id","2");
    fail("document validity check failed");
  }
 catch (  ProcCallException pcex) {
    assertTrue(pcex.getMessage().contains("{\"id\":2, \"bool\"; false, \"??????Vo\":\"??????????????????????????????????????????????????? ... is not valid JSON"));
  }
}
