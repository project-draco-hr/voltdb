{
  if (m_bb.position() + delta > m_bb.capacity()) {
    ByteBuffer oldbb=m_bb.asReadOnlyBuffer();
    oldbb.flip();
    int newCapacity=oldbb.capacity() * 2;
    while (newCapacity < (oldbb.capacity() + delta)) {
      newCapacity*=2;
    }
    ByteBuffer newbb=ByteBuffer.allocateDirect(newCapacity);
    newbb.put(oldbb);
    m_bb=newbb;
  }
}
