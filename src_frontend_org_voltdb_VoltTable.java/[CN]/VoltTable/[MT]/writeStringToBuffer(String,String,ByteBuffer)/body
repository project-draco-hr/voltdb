{
  if (s == null) {
    b.putInt(NULL_STRING_INDICATOR);
    return;
  }
  int len=0;
  byte[] strbytes=null;
  try {
    strbytes=s.getBytes(encoding);
    len=strbytes.length;
  }
 catch (  UnsupportedEncodingException e) {
    throw new RuntimeException(e);
  }
  assert(strbytes != null);
  b.putInt(len);
  b.put(strbytes);
}
