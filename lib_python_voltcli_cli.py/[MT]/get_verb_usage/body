def get_verb_usage(verb):
    '\n    Provide the full usage string, including argument names, for a verb.\n    '
    usage = verb.name
    if verb.cli_spec.usage:
        usage += (' %s' % verb.cli_spec.usage)
    for o in verb.iter_arguments():
        usage += (' %s' % o.name.upper())
    return usage
