def check_missing_items(type_name, missing_items):
    "\n    Look at item list with (name, description) pairs and abort with a useful\n    error message if the list isn't empty.\n    "
    if missing_items:
        if (len(missing_items) > 1):
            plural = 's'
        else:
            plural = ''
        fmt = ('%%-%ds  %%s' % max([len(o) for (o, h) in missing_items]))
        utility.abort(('Missing required %s%s:' % (type_name, plural)), ((fmt % (o.upper(), h)) for (o, h) in missing_items))
