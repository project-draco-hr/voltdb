def create_verb_parser(self, verb):
    '\n        Create CLI option parser for verb command line.\n        '
    parser = optparse.OptionParser(description=verb.cli_spec.description, usage=('%%prog %s %s' % (verb.name, verb.cli_spec.usage)))
    if self.preproc.verb:
        if verb.cli_spec.cli_options:
            verb.cli_spec.cli_options.sort()
            for cli_option in verb.cli_spec.cli_options:
                try:
                    parser.add_option(*cli_option.args, **cli_option.kwargs)
                except Exception as e:
                    utility.abort(('Exception initializing options for verb "%s".' % verb.name), e)
    return parser
