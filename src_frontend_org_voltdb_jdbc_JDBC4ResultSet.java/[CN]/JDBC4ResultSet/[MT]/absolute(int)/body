{
  checkClosed();
  if (row == 0) {
    beforeFirst();
    return true;
  }
  if (rowCount == 0) {
    if (row == 0)     return true;
    return false;
  }
  if (rowCount + row < 0) {
    beforeFirst();
    return false;
  }
  if (row > rowCount) {
    cursorPosition=Position.afterLast;
    if (row == rowCount + 1)     return true;
 else     return false;
  }
  if (cursorPosition == Position.afterLast || cursorPosition == Position.beforeFirst) {
    cursorPosition=Position.middle;
  }
  try {
    if (table.getActiveRowIndex() > row && row > 0)     return table.advanceToRow(row - 1);
    if (row < 0) {
      row+=rowCount;
      row++;
    }
    table.resetRowPosition();
    table.advanceToRow(0);
    return table.advanceToRow(row - 1);
  }
 catch (  Exception x) {
    throw SQLError.get(x);
  }
}
