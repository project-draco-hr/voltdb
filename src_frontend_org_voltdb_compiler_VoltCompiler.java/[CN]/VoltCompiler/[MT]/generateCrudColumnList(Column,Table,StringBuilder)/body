{
  int partitionoffset=-1;
  boolean first=true;
  int paramoffset=0;
  sb.append("(");
  for (  Column c : table.getColumns()) {
    paramoffset++;
    if (!first)     sb.append(", ");
    first=false;
    sb.append("?");
    if (c == partitioncolumn) {
      partitionoffset=paramoffset;
    }
  }
  sb.append(")");
  return partitionoffset;
}
