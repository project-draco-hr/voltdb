def install():
    with ChDir(Global.source_root):
        info(('Installing files to prefix "%s"...' % Global.options.prefix))
        for action in actions:
            debug(str(action))
            for cmd in action.getcmds():
                if cmd.working_dir:
                    with ChDir(cmd.working_dir):
                        run_cmd(*cmd.args)
                else:
                    run_cmd(*cmd.args)
        info('Installation is complete.')
