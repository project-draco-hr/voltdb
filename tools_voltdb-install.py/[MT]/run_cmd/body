def run_cmd(cmd, *args):
    fullcmd = cmd
    for arg in args:
        if (len(arg.split()) > 1):
            fullcmd += (' "%s"' % arg)
        else:
            fullcmd += (' %s' % arg)
    if Global.options.dryrun:
        print fullcmd
    else:
        retcode = os.system(fullcmd)
        if (retcode != 0):
            abort(('return code %d: %s' % (retcode, fullcmd)))
