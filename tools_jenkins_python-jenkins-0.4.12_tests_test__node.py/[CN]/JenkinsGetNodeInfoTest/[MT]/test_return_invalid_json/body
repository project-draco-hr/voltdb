@patch.object(jenkins.Jenkins, 'jenkins_open')
def test_return_invalid_json(self, jenkins_mock):
    jenkins_mock.side_effect = ['Invalid JSON']
    with self.assertRaises(jenkins.JenkinsException) as context_manager:
        self.j.get_node_info('test_node')
    self.assertEqual(jenkins_mock.call_args[0][0].get_full_url(), self.make_url('computer/test_node/api/json?depth=0'))
    self.assertEqual(str(context_manager.exception), 'Could not parse JSON info for node[test_node]')
    self._check_requests(jenkins_mock.call_args_list)
