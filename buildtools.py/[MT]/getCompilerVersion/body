def getCompilerVersion():
    vinfo = output = Popen(['gcc', '-v'], stderr=PIPE).communicate()[1]
    if (output.find('clang') != (-1)):
        return ('clang', 0, 0, 0)
    else:
        vinfo = vinfo.strip().split('\n')
        vinfo = vinfo[(-1)]
        vinfo = vinfo.split()[2]
        vinfo = vinfo.split('.')
        return ('gcc', int(vinfo[0]), int(vinfo[1]), int(vinfo[2]))
