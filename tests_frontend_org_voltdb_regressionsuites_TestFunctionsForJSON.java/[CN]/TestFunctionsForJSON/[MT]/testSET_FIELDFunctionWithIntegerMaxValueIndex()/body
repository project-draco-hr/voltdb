{
  final boolean intMaxValIndexBugFixed=false;
  Client client=getClient();
  loadJS1(client);
  if (intMaxValIndexBugFixed) {
    testProcWithInvalidJSON("exceeds the size of the VARCHAR(8192) column",client,5,"SelectSetFieldProc","arr[" + Integer.MAX_VALUE + "]","-1",5);
    testProcWithInvalidJSON("exceeds the size of the VARCHAR(8192) column",client,5,"@AdHoc","SELECT SET_FIELD(DOC, 'arr[" + Integer.MAX_VALUE + "]', '-1') FROM JS1 WHERE ID = 5");
  }
 else {
    testProcWithValidJSON("{\"arr\":[]}",client,"SelectSetFieldProc","arr[" + Integer.MAX_VALUE + "]","-1",5);
    testProcWithValidJSON("{\"arr\":[]}",client,"@AdHoc","SELECT SET_FIELD(DOC, 'arr[" + Integer.MAX_VALUE + "]', '-1') FROM JS1 WHERE ID = 5");
  }
}
