{
  if ((hexString.length() % 2) != 0)   throw new RuntimeException("String is not properly hex-encoded.");
  hexString=hexString.toUpperCase();
  byte[] retval=new byte[hexString.length() / 2];
  for (int i=0; i < retval.length; i++) {
    int value=Integer.parseInt(hexString.substring(2 * i,2 * i + 2),16);
    if ((value < 0) || (value > 255))     throw new RuntimeException("String is not properly hex-encoded.");
    retval[i]=(byte)value;
  }
  return retval;
}
