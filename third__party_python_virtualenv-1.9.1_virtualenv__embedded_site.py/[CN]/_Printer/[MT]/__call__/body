def __call__(self):
    self.__setup()
    prompt = 'Hit Return for more, or q (and Return) to quit: '
    lineno = 0
    while 1:
        try:
            for i in range(lineno, (lineno + self.MAXLINES)):
                print self.__lines[i]
        except IndexError:
            break
        else:
            lineno += self.MAXLINES
            key = None
            while (key is None):
                try:
                    key = raw_input(prompt)
                except NameError:
                    key = input(prompt)
                if (key not in ('', 'q')):
                    key = None
            if (key == 'q'):
                break
