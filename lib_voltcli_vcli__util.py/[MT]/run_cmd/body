def run_cmd(cmd, *args):
    '\n    Run external program without capturing or suppressing output and check return code.\n    '
    fullcmd = cmd
    for arg in args:
        if (len(arg.split()) > 1):
            fullcmd += (' "%s"' % arg)
        else:
            fullcmd += (' %s' % arg)
    if vcli_opt.dryrun:
        print fullcmd
    else:
        retcode = os.system(fullcmd)
        if (retcode != 0):
            abort(('Command "%s ..." failed with return code %d.' % (cmd, retcode)))
