{
  try {
    if (readyForRead()) {
      final int maxRead=m_handler.getMaxRead();
      if (maxRead > 0) {
        fillReadStream(maxRead);
        ByteBuffer message;
        while ((message=m_handler.retrieveNextMessage(this)) != null) {
          m_handler.handleMessage(message,this);
          m_messagesRead++;
        }
      }
    }
    drainWriteStream();
  }
  finally {
synchronized (m_lock) {
      assert(m_running == true);
      m_running=false;
    }
  }
}
