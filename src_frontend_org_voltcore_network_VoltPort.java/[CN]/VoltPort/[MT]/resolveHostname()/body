{
synchronized (m_lock) {
    if (!m_running) {
      return;
    }
    m_es.submit(new Runnable(){
      @Override public void run(){
        try {
          m_remoteHost=InetAddress.getByName(m_remoteIP).getHostName();
        }
 catch (        UnknownHostException e) {
          networkLog.warn("Unable to resolve hostname of host " + m_remoteIP);
        }
      }
    }
);
  }
}
