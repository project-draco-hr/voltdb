{
  if (m_shutdown) {
    return null;
  }
  return m_es.submit(new Callable<Object>(){
    @Override public Object call() throws Exception {
      try {
        if (m_shutdown) {
          return null;
        }
        m_committedBuffers.closeAndDelete();
        m_shutdown=true;
        return null;
      }
  finally {
        m_es.shutdown();
      }
    }
  }
);
}
