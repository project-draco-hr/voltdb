{
  if (root instanceof AggregatePlanNode || root.getPlanNodeType() == PlanNodeType.PROJECTION) {
    return false;
  }
  if (m_parsedSelect.hasComplexGroupby() || m_parsedSelect.hasComplexAgg()) {
    return false;
  }
  if (root.getPlanNodeType() == PlanNodeType.RECEIVE && m_parsedSelect.hasPartitionColumnInGroupby()) {
    return false;
  }
  return true;
}
