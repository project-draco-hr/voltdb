{
  if (isStarted())   throw new IllegalStateException(STARTED);
  Server old_server=getServer();
  super.setServer(server);
  Handler[] h=getHandlers();
  for (int i=0; h != null && i < h.length; i++)   h[i].setServer(server);
  if (server != null && server != old_server)   server.getContainer().update(this,null,_handlers,"handler");
}
