{
  if (m_scaleParams.warehouses > 1) {
    invokeProcedure(c,new VerifyBasicCallback(),Constants.PAYMENT_BY_ID_W,w_id,d_id,h_amount,c_w_id,c_d_id,c_id,now);
    invokeProcedure(c,new VerifyBasicCallback(TPCCSimulation.Transaction.PAYMENT),Constants.PAYMENT_BY_ID_C,w_id,d_id,h_amount,c_w_id,c_d_id,c_id,now);
  }
 else {
    invokeProcedure(c,new VerifyBasicCallback(TPCCSimulation.Transaction.PAYMENT),Constants.PAYMENT_BY_ID,w_id,d_id,h_amount,c_w_id,c_d_id,c_id,now);
  }
}
