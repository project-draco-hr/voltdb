{
  if (!invocation.procName.equals("@AdHoc")) {
    return true;
  }
  ParameterSet params=invocation.getParams();
  if (params.m_params.length > 2) {
    final ClientResponseImpl errorResponse=new ClientResponseImpl(ClientResponseImpl.GRACEFUL_FAILURE,new VoltTable[0],"Adhoc system procedure requires exactly one or two parameters, " + "the SQL statement to execute with an optional partitioning value.",invocation.clientHandle);
    s.enqueue(errorResponse);
    return false;
  }
  if ((params.m_params[0] instanceof String) == false) {
    final ClientResponseImpl errorResponse=new ClientResponseImpl(ClientResponseImpl.GRACEFUL_FAILURE,new VoltTable[0],"Adhoc system procedure requires sql in the String type only.",invocation.clientHandle);
    s.enqueue(errorResponse);
    return false;
  }
  return true;
}
