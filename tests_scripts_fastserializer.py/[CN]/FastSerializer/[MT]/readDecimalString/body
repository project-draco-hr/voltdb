def readDecimalString(self):
    encoded_string = self.readString()
    if (encoded_string == None):
        return None
    val = decimal.Decimal(encoded_string)
    (sign, digits, exponent) = val.as_tuple()
    if ((- exponent) > self.__class__.DEFAULT_DECIMAL_SCALE):
        raise ValueError(('Scale of this decimal is %d and the max is 12' % (- exponent)))
    if (len(digits) > 38):
        raise ValueError(('Precision of this decimal is %d and the max is 38' % len(digits)))
    return val
