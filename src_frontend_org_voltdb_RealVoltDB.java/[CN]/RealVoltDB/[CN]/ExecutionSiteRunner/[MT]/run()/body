{
  Mailbox mailbox=VoltDB.instance().getMessenger().createMailbox(m_siteId,VoltDB.DTXN_MAILBOX_ID,null);
  m_siteObj=new ExecutionSite(VoltDB.instance(),mailbox,m_siteId,m_serializedCatalog,null,m_recovering);
synchronized (this) {
    m_isSiteCreated=true;
    this.notifyAll();
    try {
      wait();
    }
 catch (    InterruptedException e) {
      throw new RuntimeException(e);
    }
  }
  m_siteObj.run();
}
