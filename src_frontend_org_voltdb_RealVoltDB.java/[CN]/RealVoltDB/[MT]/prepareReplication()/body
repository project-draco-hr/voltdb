{
  try {
    if (m_nodeDRGateway != null) {
      m_nodeDRGateway.bindPorts(m_catalogContext.cluster.getDrproducerenabled(),VoltDB.getReplicationPort(m_catalogContext.cluster.getDrproducerport()),VoltDB.getDefaultReplicationInterface());
    }
    if (m_consumerDRGateway != null) {
      m_consumerDRGateway.initialize(m_config.m_startAction.doesRecover());
    }
  }
 catch (  Exception ex) {
    MiscUtils.printPortsInUse(hostLog);
    VoltDB.crashLocalVoltDB("Failed to initialize DR",false,ex);
  }
}
