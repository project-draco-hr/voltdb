@patch('jenkins.urlopen')
def test_raise_HTTPError(self, urlopen_mock):
    urlopen_mock.side_effect = jenkins.HTTPError(self.make_url(''), code=503, msg='internal server error', hdrs=[], fp=None)
    with self.assertRaises(jenkins.BadHTTPException) as context_manager:
        self.j.get_version()
    self.assertEqual(str(context_manager.exception), 'Error communicating with server[{0}/]'.format(self.base_url))
    self._check_requests(urlopen_mock.call_args_list)
