{
  assert(client != null);
  try {
    ClientResponse r=client.callProcedure("@Statistics","MEMORY",0);
    VoltTable stats=r.getResults()[0];
    stats.advanceRow();
    long rss=stats.getLong("RSS") / 1024;
    return rss;
  }
 catch (  Exception e) {
    e.printStackTrace();
    System.exit(-1);
    return 0;
  }
}
