{
  try {
    client.callProcedure("@AdHoc",stmt);
  }
 catch (  ProcCallException pce) {
    String msg=pce.getMessage();
    String diagnostic="Expected the statement \"" + stmt + "\" to throw an exception containing the message \""+ expectedMsg+ "\", but instead it threw an exception containing \""+ msg+ "\".";
    assertTrue(diagnostic,msg.contains(expectedMsg));
    return;
  }
  String diagnostic="Expected the statement \"" + stmt + "\" to throw an exception containing the message \""+ expectedMsg+ ", but instead it threw nothing.";
  fail(diagnostic);
}
