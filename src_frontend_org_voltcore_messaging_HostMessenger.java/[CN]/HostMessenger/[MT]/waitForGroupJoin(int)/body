{
  try {
    while (true) {
      ZKUtil.FutureWatcher fw=new ZKUtil.FutureWatcher();
      if (m_zk.getChildren(CoreZK.hosts,fw).size() == expectedHosts) {
        break;
      }
      fw.get();
    }
  }
 catch (  Exception e) {
    VoltDB.crashLocalVoltDB("Error waiting for hosts to be ready",false,e);
  }
}
