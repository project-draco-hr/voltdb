{
  super(source);
  m_escaper=escaper;
  m_currentFilename="";
  m_Writer=null;
  m_lastWriterCreation=null;
  m_generation=generation;
  m_tableName=tableName;
  m_sdf=new SimpleDateFormat("yyyy-MM-dd HH:mm:ss.SSS");
  m_firstfield=firstfield;
  if (outdir != null) {
    m_period=period;
    m_dateformat=dateformat;
    m_prefix=outdir.getPath() + File.separator + m_generation+ "-"+ nonce+ "-"+ source.tableName+ ".";
    m_extension="." + escaper.getExtension();
    m_discard=false;
  }
 else {
    m_logger.error("--discard provided, data will be dumped to /dev/null");
    m_discard=true;
  }
}
