{
  Client client=getClient();
  validateTableOfScalarLongs(client,"insert into t (pk) values (1);",new long[]{1});
  VoltTable vt=client.callProcedure("@AdHoc","select pointfromtext('point (42.4906 -71.2767)') from t;").getResults()[0];
  assertTrue(vt.advanceRow());
  PointType pt=vt.getPoint(0);
  assertFalse(vt.wasNull());
  assertEquals(42.4906,pt.getLatitude(),0.001);
  assertEquals(-71.2767,pt.getLongitude(),0.001);
}
