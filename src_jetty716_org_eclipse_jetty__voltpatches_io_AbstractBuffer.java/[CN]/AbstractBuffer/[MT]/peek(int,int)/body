{
  if (_view == null) {
    _view=new View(this,-1,index,index + length,isReadOnly() ? READONLY : READWRITE);
  }
 else {
    _view.update(this.buffer());
    _view.setMarkIndex(-1);
    _view.setGetIndex(0);
    _view.setPutIndex(index + length);
    _view.setGetIndex(index);
  }
  return _view;
}
