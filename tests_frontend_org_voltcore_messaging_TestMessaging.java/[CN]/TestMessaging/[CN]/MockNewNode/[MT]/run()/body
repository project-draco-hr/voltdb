{
  try {
    HostMessenger.Config config=new HostMessenger.Config();
    config.internalPort+=1;
    config.zkInterface="127.0.0.1:" + 2182;
    HostMessenger msg=new HostMessenger(config);
    msg.start();
    m_ready.set(true);
    msg.waitForGroupJoin(2);
  }
 catch (  Exception e) {
    e.printStackTrace();
    throw new RuntimeException(e);
  }
}
