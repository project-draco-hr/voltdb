@VOLT.Command(description='Run the VoltDB compiler to build the catalog.', cli_options=VOLT.CLIBoolean('-c', '--conditional', 'conditional', 'only build when the catalog file is missing'))
def compile(runner):
    if ((not runner.opts.conditional) or (not runner.catalog_exists())):
        VOLT.java.execute('org.voltdb.compiler.VoltCompiler', None, runner.project_path, runner.get_catalog(), *runner.args)
