def generate_detail(name, item, output_dir):
    if (output_dir == None):
        return
    details = ('\n<html>\n<head>\n<title>Detail of "%s"</title>\n<style>\ntd {width: 50%%}\n</style>\n</head>\n\n<body>\n<h2>%s</h2>\n<table cellpadding=3 cellspacing=1 border=1>\n<tr>\n<th>VoltDB Response</th>\n<th>HSQLDB Response</th>\n</tr>\n<tr>\n<td>%s</td>\n<td>%s</td>\n</tr>\n<tr>\n<td>%s</td>\n<td>%s</td>\n</tr>\n<tr>\n<td>%s</td>\n<td>%s</td>\n</tr>\n</table>\n</body>\n\n</html>\n' % (cgi.escape(item['SQL']), cgi.escape(item['SQL']), highlight(item['jni']['Status'], ('Status' == item.get('highlight'))), highlight(item['hsqldb']['Status'], ('Status' == item.get('highlight'))), (item['jni'].get('Info') or ''), (item['hsqldb'].get('Info') or ''), generate_table_str(item, 'jni'), generate_table_str(item, 'hsqldb')))
    filename = ('%s.html' % item['id'])
    fd = open(os.path.join(output_dir, filename), 'w')
    fd.write(details.encode('utf-8'))
    fd.close()
    return filename
