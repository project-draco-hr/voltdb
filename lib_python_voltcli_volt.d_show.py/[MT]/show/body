@VOLT.Command(description='Display various types of information.', usage='SUB_COMMAND [ARGUMENT ...]', description2='\nSub-Commands:\n\n    Display all or specific configuration key/value pairs.\n\n        show config [KEY ...]\n')
def show(runner):
    if (not runner.args):
        utility.error('No sub-command specified for "show".')
        runner.help()
    else:
        subcommand = runner.args[0].lower()
        subargs = runner.args[1:]
        if (subcommand in subcommands):
            subcommands[subcommand](runner, *subargs)
        else:
            utility.error(('Invalid sub-command "%s" specified.' % subcommand))
            runner.help()
