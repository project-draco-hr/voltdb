@VOLT.Command(description='Display various types of information.', arguments=(VOLT.StringArgument('type', ('information type: %s' % valid_types)), VOLT.StringArgument('item', 'optional item(s) (see type-specific help)', min_count=0, max_count=None)), description2='\nInformation Types:\n\n    Display all or specific configuration key/value pairs.\n\n        show config [KEY ...]\n')
def show(runner):
    tag = runner.args[0].lower()
    tgtargs = runner.args[1:]
    if (tag in types):
        types[tag](runner, *tgtargs)
    else:
        utility.error(('Invalid tag "%s" specified (%s).' % (tag, valid_types)))
        runner.help()
