@VOLT.Command(description='Display various types of information.', usage='TARGET [ARGUMENT ...]', description2='\nTargets:\n\n    Display all or specific configuration key/value pairs.\n\n        show config [KEY ...]\n')
def show(runner):
    if (not runner.args):
        utility.error('No target specified for "show".')
        runner.help()
    else:
        target = runner.args[0].lower()
        tgtargs = runner.args[1:]
        if (target in targets):
            targets[target](runner, *tgtargs)
        else:
            utility.error(('Invalid target "%s" specified.' % target))
            runner.help()
