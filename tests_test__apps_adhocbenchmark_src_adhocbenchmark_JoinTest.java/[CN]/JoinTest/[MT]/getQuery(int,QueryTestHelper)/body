{
  int iStart=iQuery * this.nLevels;
  StringBuilder query=new StringBuilder("SELECT * FROM ");
  for (int i=0; i < this.nLevels; i++) {
    if (i > 0) {
      query.append(", ");
    }
    query.append(helper.tableName(helper.getShuffledNumber(iStart + i)));
  }
  query.append(" WHERE ");
  for (int i=0; i < this.nLevels - 1; i++) {
    if (i > 0) {
      query.append(" AND ");
    }
    query.append(helper.tableColumnName(helper.getShuffledNumber(iStart + i + 1),1)).append(" = ").append(helper.tableColumnName(helper.getShuffledNumber(iStart + i),0));
  }
  return query.toString();
}
