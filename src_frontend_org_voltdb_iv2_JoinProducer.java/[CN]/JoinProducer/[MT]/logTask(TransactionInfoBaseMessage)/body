{
  if (message instanceof FragmentTaskMessage) {
    log.info("P" + m_partitionId + " received first fragment, "+ "sending to mailbox "+ CoreUtils.hsIdToString(m_joinCoordinatorHSId));
    if (!m_receivedFirstFragment) {
      RejoinMessage msg=new RejoinMessage(m_mailbox.getHSId(),RejoinMessage.Type.FIRST_FRAGMENT_RECEIVED);
      m_mailbox.send(m_joinCoordinatorHSId,msg);
      m_receivedFirstFragment=true;
    }
  }
}
