{
  try {
    while (true) {
      processPendingFaults();
synchronized (this) {
        if (m_pendingFaults.isEmpty()) {
          try {
            this.wait();
          }
 catch (          InterruptedException e) {
            return;
          }
        }
      }
    }
  }
 catch (  Exception e) {
    e.printStackTrace();
    VoltDB.crashLocalVoltDB(e.getMessage(),true,e);
  }
}
