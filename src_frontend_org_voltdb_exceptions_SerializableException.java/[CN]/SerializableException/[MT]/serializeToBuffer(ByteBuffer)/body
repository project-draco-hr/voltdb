{
  assert(getSerializedSize() <= b.remaining());
  b.putShort((short)(getSerializedSize() - 2));
  b.put((byte)getExceptionType().ordinal());
  if (m_message != null) {
    final byte messageBytes[]=m_message.getBytes();
    b.putInt(messageBytes.length);
    b.put(messageBytes);
  }
 else {
    b.putInt(0);
  }
  p_serializeToBuffer(b);
}
