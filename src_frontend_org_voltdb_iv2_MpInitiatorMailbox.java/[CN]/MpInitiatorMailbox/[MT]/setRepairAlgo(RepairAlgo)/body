{
  final CountDownLatch cdl=new CountDownLatch(1);
  m_taskQueue.offer(new Runnable(){
    @Override public void run(){
      try {
        setRepairAlgoInternal(algo);
      }
  finally {
        cdl.countDown();
      }
    }
  }
);
  try {
    cdl.await();
  }
 catch (  InterruptedException e) {
    Throwables.propagate(e);
  }
}
