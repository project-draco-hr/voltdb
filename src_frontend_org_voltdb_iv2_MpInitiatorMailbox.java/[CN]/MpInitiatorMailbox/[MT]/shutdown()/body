{
  m_taskQueue.offer(new Runnable(){
    @Override public void run(){
      try {
        shutdownInternal();
      }
 catch (      InterruptedException e) {
        tmLog.info("Interrupted during shutdown",e);
      }
    }
  }
);
  m_taskQueue.offer(new Runnable(){
    @Override public void run(){
      throw new TerminateThreadException();
    }
  }
);
  m_taskThread.join();
}
