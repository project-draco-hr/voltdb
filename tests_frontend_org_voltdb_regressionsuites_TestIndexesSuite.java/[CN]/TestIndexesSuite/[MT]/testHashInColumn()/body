{
  Client client=getClient();
  ClientResponse cr;
  List<String> passing=Arrays.asList("create table block ( goodhashname varchar(256) not null, primary key ( goodhashname ) );","create table block ( goodtreehashname varchar(256) not null, primary key (goodtreehashname));","create table block ( goodvanilla varchar(256) not null, constraint goodtree_hash_constraint primary key ( goodvanilla ) );");
  List<String> failing=Arrays.asList("create table block ( badhashname varchar(256) not null, constraint badhashconstraint primary key ( badhashname ) );","create table block ( badzotzname varchar(256) not null, constraint badhashconstraint primary key ( badzotzname ) );");
  for (  String cmd : passing) {
    cr=client.callProcedure("@AdHoc",cmd);
    assertEquals(cr.getStatus(),ClientResponse.SUCCESS);
    cr=client.callProcedure("@AdHoc","drop table block;");
    assertEquals(cr.getStatus(),ClientResponse.SUCCESS);
  }
  for (  String cmd : failing) {
    verifyProcFails(client,"Index [A-Z_]* in table [A-Z_]* uses a non-hashable column [A-Z_]*","@AdHoc",cmd);
  }
}
