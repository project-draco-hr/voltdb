def moving_average(x, n, type='simple'):
    "\n    compute an n period moving average.\n\n    type is 'simple' | 'exponential'\n\n    "
    x = np.asarray(x)
    if (type == 'simple'):
        weights = np.ones(n)
    else:
        weights = np.exp(np.linspace((-1.0), 0.0, n))
    weights /= weights.sum()
    a = np.convolve(x, weights, mode='full')[:len(x)]
    a[:(n - 1)] = None
    return a
