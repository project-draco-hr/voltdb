{
  try {
    if (out != null) {
      out.flush();
      out.close();
    }
    String pathString=String.format("%s/%s-%04d.txt",uri,table,index);
    Path path=new Path(pathString);
    hdfs.create(path).close();
    out=new PrintWriter(hdfs.append(path));
    index++;
    LOG.info("Rolled output file to: " + pathString);
  }
 catch (  IOException e) {
    e.printStackTrace();
  }
}
