{
  boolean started=false;
  while (!started) {
    try {
      db.createConnection("localhost");
      started=true;
    }
 catch (    java.net.ConnectException e) {
      System.out.print("Server not running yet. Pausing before Trying again...\n");
    }
catch (    IOException e) {
      e.printStackTrace();
      System.exit(-1);
    }
    if (!started) {
      pause(10.0);
    }
  }
}
