{
  String newUri="";
  StringTokenizer st=new StringTokenizer(uri,"/ ",true);
  while (st.hasMoreTokens()) {
    String tok=st.nextToken();
    if (tok.equals("/"))     newUri+="/";
 else     if (tok.equals(" "))     newUri+="%20";
 else {
      newUri+=URLEncoder.encode(tok);
    }
  }
  return newUri;
}
