{
  Long nextSite=null;
synchronized (m_lock) {
    if (!m_pendingSites.isEmpty()) {
      nextSite=m_pendingSites.poll();
      m_snapshotSites.add(nextSite);
      REJOINLOG.info("Initiating snapshot stream to next site: " + CoreUtils.hsIdToString(nextSite));
    }
  }
  if (nextSite != null) {
    initiateRejoinOnSites(nextSite);
  }
}
