{
  String nonce=makeSnapshotNonce("Rejoin",HSIds.get(0));
synchronized (m_lock) {
    for (    long HSId : HSIds) {
      m_nonces.put(HSId,nonce);
    }
  }
  RejoinMessage msg=new RejoinMessage(getHSId(),m_liveRejoin ? RejoinMessage.Type.INITIATION : RejoinMessage.Type.INITIATION_COMMUNITY,nonce,m_snapshotBufPool);
  send(com.google.common.primitives.Longs.toArray(HSIds),msg);
  if (m_rejoinDeathTestMode && !m_rejoinDeathTestCancel && (m_sitesRejoinedCount.incrementAndGet() == 2)) {
    System.exit(0);
  }
}
