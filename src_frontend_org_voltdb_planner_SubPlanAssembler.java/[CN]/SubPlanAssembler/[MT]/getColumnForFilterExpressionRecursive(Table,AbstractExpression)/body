{
  if (expr == null)   return null;
  if (expr.getExpressionType() == ExpressionType.VALUE_TUPLE) {
    TupleValueExpression tve=(TupleValueExpression)expr;
    return getTableColumn(table,tve.getColumnName());
  }
  Column leftCol=getColumnForFilterExpressionRecursive(table,expr.getLeft());
  Column rightCol=getColumnForFilterExpressionRecursive(table,expr.getRight());
  assert(leftCol == null || getTableColumn(table,leftCol.getTypeName()) != null);
  assert(rightCol == null || getTableColumn(table,rightCol.getTypeName()) != null);
  if (leftCol != null && rightCol != null) {
    return null;
  }
  if (leftCol != null)   return leftCol;
  if (rightCol != null)   return rightCol;
  return null;
}
