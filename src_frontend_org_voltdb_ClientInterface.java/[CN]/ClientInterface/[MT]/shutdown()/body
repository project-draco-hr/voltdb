{
  if (m_acceptor != null) {
    m_acceptor.shutdown();
  }
  if (m_adminAcceptor != null) {
    m_adminAcceptor.shutdown();
  }
  if (m_asyncCompilerWorkThread != null) {
    m_asyncCompilerWorkThread.shutdown();
    m_asyncCompilerWorkThread.join();
  }
  if (m_snapshotDaemon != null) {
    m_snapshotDaemon.shutdown();
  }
}
