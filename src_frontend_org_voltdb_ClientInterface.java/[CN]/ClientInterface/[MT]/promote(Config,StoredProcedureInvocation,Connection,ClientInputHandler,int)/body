{
  StoredProcedureInvocation promoteTask=task.getShallowCopy();
  promoteTask.setProcName("@PromoteReplicaStatus");
  createTransaction(handler.connectionId(),handler.m_hostname,handler.isAdmin(),promoteTask,sysProc.getReadonly(),sysProc.getSinglepartition(),sysProc.getEverysite(),m_allPartitions,m_allPartitions.length,ccxn,messageSize,System.currentTimeMillis(),false);
}
