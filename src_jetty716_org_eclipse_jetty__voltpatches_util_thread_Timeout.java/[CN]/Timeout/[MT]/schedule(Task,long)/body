{
synchronized (_lock) {
    if (task._timestamp != 0) {
      task.unlink();
      task._timestamp=0;
    }
    task._timeout=this;
    task._expired=false;
    task._delay=delay;
    task._timestamp=_now + delay;
    Task last=_head._prev;
    while (last != _head) {
      if (last._timestamp <= task._timestamp)       break;
      last=last._prev;
    }
    last.link(task);
  }
}
