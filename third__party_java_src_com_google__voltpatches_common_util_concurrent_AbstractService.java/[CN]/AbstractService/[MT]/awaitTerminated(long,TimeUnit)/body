{
  if (monitor.enterWhenUninterruptibly(isStopped,timeout,unit)) {
    try {
      State state=state();
      checkCurrentState(TERMINATED);
    }
  finally {
      monitor.leave();
    }
  }
 else {
    throw new TimeoutException("Timed out waiting for " + this + " to reach a terminal state. "+ "Current state: "+ state());
  }
}
