{
  if (values.length > Short.MAX_VALUE) {
    throw new IOException("Array exceeds maximum length of " + Short.MAX_VALUE + " bytes");
  }
  buf.putShort((short)values.length);
  for (int i=0; i < values.length; ++i) {
    if (values[i] == null) {
      buf.putInt(-1);
    }
 else {
      writeArray(values[i],buf);
    }
  }
}
