{
  final int MAX_LENGTH=VoltType.MAX_VALUE_LENGTH;
  final int NULL_STRING_INDICATOR=-1;
  if (string == null) {
    writeInt(NULL_STRING_INDICATOR);
    return;
  }
  int len=0;
  byte[] strbytes={};
  try {
    strbytes=string.getBytes("UTF-8");
    len=strbytes.length;
  }
 catch (  UnsupportedEncodingException e) {
    throw new RuntimeException(e);
  }
  if (len > MAX_LENGTH) {
    throw new IOException("String exceeds maximum length of " + MAX_LENGTH + " bytes.");
  }
  writeInt(len);
  write(strbytes);
}
