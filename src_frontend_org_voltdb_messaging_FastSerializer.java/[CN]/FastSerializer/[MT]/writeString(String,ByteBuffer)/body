{
  final int NULL_STRING_INDICATOR=-1;
  if (string == null) {
    buffer.putInt(NULL_STRING_INDICATOR);
    return;
  }
  int len=0;
  byte[] strbytes={};
  try {
    strbytes=string.getBytes("UTF-8");
    len=strbytes.length;
  }
 catch (  UnsupportedEncodingException e) {
    throw new RuntimeException(e);
  }
  buffer.putInt(len);
  buffer.put(strbytes);
}
