{
  for (int i=0; i < args.length; i++) {
    if (args[i].equals("-n")) {
      i++;
      try {
        count=Long.parseLong(args[i]);
      }
 catch (      NumberFormatException e) {
        System.err.println("'" + args[i] + "': not a valid number");
        System.exit(1);
      }
    }
 else {
      System.err.println("Unknown argument: '" + args[i] + "' - ignoring");
    }
  }
}
