{
  if (hostId < 0)   throw new Exception("Rejoin HostId can be negative.");
  if (m_foreignHosts.length <= hostId)   throw new Exception("Rejoin HostId out of expexted range.");
  if (m_foreignHosts[hostId] != null && m_foreignHosts[hostId].isUp())   throw new Exception("Rejoin HostId is not a failed host.");
  SocketChannel sock=SocketJoiner.connect(m_localHostId,hostId,addr,liveHosts);
  m_tempNewFH=new ForeignHost(this,hostId,sock);
  m_tempNewFH.sendReadyMessage();
  m_tempNewHostId=hostId;
}
