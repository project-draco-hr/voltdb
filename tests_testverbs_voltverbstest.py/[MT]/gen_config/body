def gen_config(mandatory_opts, all_ops, count, expected_opts={}):
    opts = []
    i = 0
    for opt in (mandatory_opts + random.sample(all_ops, count)):
        if (not opt.datatype):
            o = ('--' + opt.pyname)
            expected_opts[opt.javaname] = None
        else:
            o = ((('--' + opt.pyname) + '=') + str(i))
            expected_opts[opt.javaname] = str(i)
        i += 1
        opts.append(o)
    return (opts, expected_opts)
