{
  boolean replicated=(counter++ % 5) == 0;
  String sql="update";
  sql+=replicated ? " adhocr " : " adhocp";
  sql+=" set";
  sql+=" ts = " + new Date().getTime() + ",";
  sql+=" inc = inc + 1,";
  sql+=" jmp = jmp + " + r.nextInt(10);
  if (!replicated) {
    sql+=" where id = " + r.nextInt(10);
  }
  sql+=";";
  return sql;
}
