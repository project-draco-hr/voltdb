def _flatten(*items):
    '\n    Internal function to recursively iterate a potentially nested sequence.\n    None items are filtered out.\n    '
    for item in items:
        if is_sequence(item):
            for subitem in item:
                for subsubitem in _flatten(subitem):
                    if (subitem is not None):
                        yield subsubitem
        elif (item is not None):
            yield item
