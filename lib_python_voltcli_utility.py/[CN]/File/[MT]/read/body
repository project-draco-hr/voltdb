def read(self):
    if (self.mode != 'r'):
        self._abort('File is not open for reading in call to read().')
    if (self.f is None):
        f = self._open()
    else:
        f = self.f
    try:
        try:
            return f.read()
        except (IOError, OSError) as e:
            abort('Read error.', e)
    finally:
        if (self.f is None):
            f.close()
