def query_pairs(self, filter=None):
    '\n        Query for keys and values as a sorted list of (key, value) pairs.\n        The optional filter is matched against the start of each key.\n        '
    d = self.query(filter=filter)
    keys = d.keys()
    keys.sort()
    results = []
    for key in keys:
        results.append((key, d[key]))
    return results
