def response(self, tables, channels, filename):
    '\n        Respond to a file to a channel\n        :param tables: List of (header, rows) tuples i.e. tables to construct leaderboards from\n        :param channels: The channels to post this file to\n        :param filename: The filename to respond with\n        '
    filecontent = ''
    for (headers, rows) in tables:
        content = ''
        if os.environ.get('vertical', False):
            content = ('\n\n*Vertical Leaderboard*:\n\n' + self.vertical_leaderboard(rows, headers))
        if os.environ.get('edit', False):
            self.edit_rows(rows)
        content = (tabulate(rows, headers) + content)
        filecontent = (filecontent + content)
    self.client.api_call('files.upload', channels=channels, content=filecontent, filetype='text', filename=filename)
