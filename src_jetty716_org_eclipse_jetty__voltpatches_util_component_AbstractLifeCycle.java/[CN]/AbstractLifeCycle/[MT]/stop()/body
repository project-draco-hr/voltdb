{
synchronized (_lock) {
    try {
      if (_state == __STOPPING || _state == __STOPPED)       return;
      setStopping();
      doStop();
      setStopped();
    }
 catch (    Exception e) {
      setFailed(e);
      throw e;
    }
catch (    Error e) {
      setFailed(e);
      throw e;
    }
  }
}
