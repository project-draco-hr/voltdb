{
  boolean more;
  long sleep=500;
  do {
    more=false;
    for (    NodeConnection cxn : m_connections) {
      more=more || cxn.m_callbacksToInvoke.get() > 0;
    }
    if (more) {
      if (Thread.interrupted())       throw new InterruptedException();
      LockSupport.parkNanos(TimeUnit.MICROSECONDS.toNanos(sleep));
      if (Thread.interrupted())       throw new InterruptedException();
      if (sleep < 5000) {
        sleep+=500;
      }
    }
  }
 while (more);
}
