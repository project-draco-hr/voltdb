from optparse import OptionParser
COUNT = 2
IS_VOLT = False
fn_generator = field_name_generator()
if (__name__ == '__main__'):
    parser = OptionParser()
    parser.add_option('-s', '--seed', dest='seed', help='seed for random number generator')
    (options, args) = parser.parse_args()
    if (options.seed == None):
        seed = random.randint(0, (2 ** 63))
        print ('Random seed: %d' % seed)
    else:
        seed = int(options.seed)
        print ('Using supplied seed: ' + str(seed))
    random.seed(seed)
    if (len(args) < 2):
        usage()
        sys.exit(3)
    catalog = args[0]
    template = args[1]
    generator = SQLGenerator(catalog, template, False)
    for i in generator.generate(True):
        print ('STATEMENT: ' + i)
