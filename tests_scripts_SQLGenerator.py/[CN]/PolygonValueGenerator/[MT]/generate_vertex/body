def generate_vertex(self, longmin, longmax, latmin, latmax):
    'Generates a point that can be used as the vertex of a polygon, at a\n           random location in between the specified minimum and maximum longitude\n           and latitude values.\n        '
    longitude = round((longmin + ((longmax - longmin) * random.random())), PolygonValueGenerator.DIGITS_BEYOND_DECIMAL_POINT)
    latitude = round((latmin + ((latmax - latmin) * random.random())), PolygonValueGenerator.DIGITS_BEYOND_DECIMAL_POINT)
    return ((str(longitude) + ' ') + str(latitude))
