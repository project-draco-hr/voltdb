def prepare_operands(self, statement):
    stmt = statement
    result = self.EXPR.search(stmt)
    while result:
        self.__fn.append(('{%s}' % self.fn_gen.next()))
        stmt = self.EXPR.sub(self.__fn[(-1)], stmt, 1)
        result = self.EXPR.search(stmt)
    if (stmt == statement):
        return None
    return [stmt, [self]]
