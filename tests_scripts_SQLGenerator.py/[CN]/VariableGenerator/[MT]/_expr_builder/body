@classmethod
def _expr_builder(cls, operand_type, label=None, must_exist=False):
    if label:
        label = ('(@(%s)\\s*)' % label)
        must_exist = True
    else:
        label = '(@(\\w+)\\s*)?'
        must_exist = False
    if must_exist:
        tail = ''
    else:
        tail = '?'
    return re.compile((cls.__EXPR_TEMPLATE % (operand_type, label, tail)))
