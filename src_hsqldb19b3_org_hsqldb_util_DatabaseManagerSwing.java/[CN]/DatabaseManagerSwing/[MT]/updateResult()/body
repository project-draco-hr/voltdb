{
  if (gridFormat) {
    if (bHelp) {
      pResult.removeAll();
      pResult.add(gScrollPane,BorderLayout.CENTER);
      pResult.doLayout();
      gResult.fireTableChanged(null);
      pResult.repaint();
      bHelp=false;
    }
  }
 else {
    showResultInText();
  }
  txtCommand.selectAll();
  txtCommand.requestFocus();
}
