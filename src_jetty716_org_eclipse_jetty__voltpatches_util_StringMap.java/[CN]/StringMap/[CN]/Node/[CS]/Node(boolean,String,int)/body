{
  int l=s.length() - offset;
  _char=new char[l];
  _ochar=new char[l];
  for (int i=0; i < l; i++) {
    char c=s.charAt(offset + i);
    _char[i]=c;
    if (ignoreCase) {
      char o=c;
      if (Character.isUpperCase(c))       o=Character.toLowerCase(c);
 else       if (Character.isLowerCase(c))       o=Character.toUpperCase(c);
      _ochar[i]=o;
    }
  }
}
