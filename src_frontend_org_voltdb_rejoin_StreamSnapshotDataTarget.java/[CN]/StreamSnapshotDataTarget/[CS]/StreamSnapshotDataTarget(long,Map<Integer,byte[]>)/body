{
  super();
  m_schemas=schemas;
  m_destHSId=hsId;
  m_mb=VoltDB.instance().getHostMessenger().createMailbox();
  m_in=new AckReceiver();
  m_in.setDaemon(true);
  m_in.start();
  m_out=new SnapshotSender();
  m_out.setDaemon(true);
  m_out.start();
  VoltDB.instance().scheduleWork(new Watchdog(),WATCHDOG_PERIOS_S,-1,TimeUnit.SECONDS);
}
