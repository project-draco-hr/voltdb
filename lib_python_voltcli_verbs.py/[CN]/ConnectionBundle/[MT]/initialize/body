def initialize(self, verb):
    verb.add_options(cli.HostOption('-H', '--host', 'host', 'connection', default='localhost', min_count=self.min_count, max_count=self.max_count, default_port=self.default_port), cli.StringOption('-p', '--password', 'password', 'the connection password'), cli.StringOption('-u', '--user', 'username', 'the connection user name'))
