def execute(self, runner):
    host = utility.parse_hosts(runner.opts.host, min_hosts=1, max_hosts=1, default_port=self.default_port)[0]
    try:
        runner.client = FastSerializer(host.host, host.port, username=runner.opts.username, password=runner.opts.password)
    except Exception as e:
        utility.abort('Client connection failed.', e)
    try:
        CommandVerb.execute(self, runner)
    finally:
        runner.client.close()
