def __init__(self, name, function, default_port, **kwargs):
    CommandVerb.__init__(self, name, function, **kwargs)
    self.default_port = default_port
    self.add_options(cli.StringOption('-H', '--host', 'host', 'the target host as HOST[:PORT]', default='localhost'), cli.StringOption('-p', '--password', 'password', "the user's connection password", default=''), cli.StringOption('-u', '--user', 'username', 'the connection user name', default=''))
