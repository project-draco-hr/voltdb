def __init__(self, name, function, **kwargs_in):
    kwargs = copy.copy(kwargs_in)
    utility.kwargs_set_defaults(kwargs, description='Display command help.', usage='[COMMAND ...]', baseverb=True)
    utility.kwargs_merge_list(kwargs, 'cli_options', cli.CLIBoolean('-a', '--all', 'all', 'display all available help, including verb usage', default=False))
    CommandVerb.__init__(self, name, function, **kwargs)
