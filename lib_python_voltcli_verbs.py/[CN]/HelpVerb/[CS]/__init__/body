def __init__(self, name, function, **kwargs):
    CommandVerb.__init__(self, name, function, **kwargs)
    print ('HelpVerb: %s' % self.cli_spec.description)
    self.set_defaults(description='Display command help.', usage='[COMMAND ...]', baseverb=True)
    self.add_cli_options(cli.BooleanOption('-a', '--all', 'all', 'display all available help, including verb usage'))
