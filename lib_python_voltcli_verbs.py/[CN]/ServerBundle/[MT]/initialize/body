def initialize(self, verb):
    JavaBundle.initialize(self, verb)
    verb.add_options(cli.StringOption('-d', '--deployment', 'deployment', 'the deployment configuration file path', default=None), cli.HostOption('-H', '--host', 'host', 'the host', default='localhost'))
    if self.needs_live:
        verb.add_options(cli.BooleanOption('-L', '--live', 'live', 'IS this a Live Rejoin?'))
    if self.needs_catalog:
        verb.add_arguments(cli.PathArgument('catalog', 'the application catalog jar file path'))
