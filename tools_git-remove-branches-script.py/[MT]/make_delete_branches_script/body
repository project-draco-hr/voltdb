def make_delete_branches_script(branches, dry_run):
    other_args = ''
    if dry_run:
        other_args = ' --dry-run'
    for b in branches:
        cmd = ('git push origin --delete %s%s' % (b.split('origin/')[1], other_args))
        comment = get_jira_info(b)
        print ('%-40s %s' % (cmd, comment))
