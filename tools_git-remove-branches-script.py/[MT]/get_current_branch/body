def get_current_branch():
    current_branch = ''
    (returncode, stdout, stderr) = run_cmd('git branch --no-color')
    if returncode:
        sys.exit(("Can't get current branch: " + stderr))
    branch = [b for b in stdout.splitlines() if (b.find('* ') == 0)]
    if branch:
        branch = branch[0][2:]
    return branch
