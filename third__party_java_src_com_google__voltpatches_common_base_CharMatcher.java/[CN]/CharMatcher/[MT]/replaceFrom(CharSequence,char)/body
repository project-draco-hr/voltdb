{
  String string=sequence.toString();
  int pos=indexIn(string);
  if (pos == -1) {
    return string;
  }
  char[] chars=string.toCharArray();
  chars[pos]=replacement;
  for (int i=pos + 1; i < chars.length; i++) {
    if (matches(chars[i])) {
      chars[i]=replacement;
    }
  }
  return new String(chars);
}
