@staticmethod
def put(database_id):
    '\n        Issues recover cmd on this local server\n        Args:\n            database_id (int): The id of the database that should be started\n        Returns:\n            Status string indicating if the request was sent successfully\n        '
    try:
        sid = (-1)
        if ('id' in request.args):
            sid = int(request.args.get('id'))
        if ('server_ip' in request.args):
            server_ip = request.args.get('server_ip')
        if ('is_blocking' in request.args):
            is_blocking = int(request.args.get('is_blocking'))
        server = voltdbserver.VoltDatabase(database_id)
        return server.check_and_start_local_server(sid, False, True, server_ip, is_blocking)
    except Exception as err:
        print traceback.format_exc()
        print traceback.format_exc()
        return make_response(jsonify({'statusstring': str(err), }), 500)
