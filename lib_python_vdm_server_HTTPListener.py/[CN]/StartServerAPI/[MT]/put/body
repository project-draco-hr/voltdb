@staticmethod
def put(database_id, server_id):
    '\n        Starts VoltDB database server on the specified server\n        Args:\n            database_id (int): The id of the database that should be started\n            server_id (int): The id of the server node that is to be started\n        Returns:\n            Status string indicating if the server node was started successfully\n        '
    deploymentcontents = get_database_deployment(database_id)
    primary = get_first_hostname(database_id)
    try:
        retcode = start_local_server(deploymentcontents, primary)
        if (retcode == 0):
            return make_response(jsonify({'statusstring': 'Success', }), 200)
        else:
            return make_response(jsonify({'statusstring': 'Error starting server', }), 500)
    except Exception as err:
        print traceback.format_exc()
        return make_response(jsonify({'statusstring': str(err), }), 500)
