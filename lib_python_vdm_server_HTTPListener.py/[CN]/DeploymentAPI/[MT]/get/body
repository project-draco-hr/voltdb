@staticmethod
def get(database_id):
    '\n        Get the deployment with specified database_id.\n        Args:\n            database_id (int): The first parameter.\n        Returns:\n            List of deployment information with specified database.\n        '
    if (database_id is None):
        return jsonify({'deployment': Global.DEPLOYMENT.values(), })
    else:
        Global.DEPLOYMENT[database_id]['users'] = {}
        Global.DEPLOYMENT[database_id]['users']['user'] = []
        d = Global.DEPLOYMENT_USERS
        for (key, value) in d.iteritems():
            for (k, v) in value.items():
                if ((k == 'databaseid') and (v == database_id)):
                    Global.DEPLOYMENT[database_id]['users']['user'].append({'name': d[key]['name'], 'roles': d[key]['roles'], 'plaintext': d[key]['plaintext'], })
        deployment = Global.DEPLOYMENT.get(database_id)
        dep = deployment.copy()
        del dep['databaseid']
        return jsonify({'deployment': dep, })
