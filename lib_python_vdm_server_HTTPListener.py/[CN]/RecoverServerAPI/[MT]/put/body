@staticmethod
def put(database_id, server_id):
    '\n        Issues recover cmd on the specified server\n        Args:\n            database_id (int): The id of the database that should be started\n            server_id (int): The id of the server node that is to be started\n        Returns:\n            Status string indicating if the server node was started successfully\n        '
    try:
        retcode = start_local_server(database_id, True)
        if (retcode == 0):
            return make_response(jsonify({'statusstring': 'Success', }), 200)
        else:
            return make_response(jsonify({'statusstring': 'Error issuing recover cmd', }), 500)
    except Exception as err:
        print traceback.format_exc()
        return make_response(jsonify({'statusstring': str(err), }), 500)
