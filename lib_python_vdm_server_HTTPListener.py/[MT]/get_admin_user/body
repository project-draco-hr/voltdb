def get_admin_user(database_id):
    users_outer = Global.DEPLOYMENT[(database_id - 1)]['users']
    if (not users_outer):
        return None
    users = users_outer['user']
    if (not users):
        return None
    admins = [auser for auser in users if (auser['roles'] == 'Administrator')]
    if (not admins):
        return None
    else:
        return admins[0]
