def make_configuration_file():
    merged_dict = {'databases': [make_public_database(x) for x in DATABASES], 'deployments': [make_public_deployment(x) for x in DEPLOYMENT], 'servers': [make_public_server(x) for x in SERVERS], }
    xml = dicttoxml.dicttoxml(merged_dict, attr_type=False, custom_root='vdm', ids=False)
    xml = parseString(xml).toprettyxml()
    try:
        f = open('.vdm/vdm.xml', 'w')
        f.write(xml)
        f.close()
    except Exception as err:
        print str(err)
