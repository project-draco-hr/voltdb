{
  if (m_disableAsync)   m_logger.log(l,message,t);
  final Runnable r=new Runnable(){
    @Override public void run(){
      m_logger.log(l,message,t);
    }
  }
;
  if (wait) {
    try {
      m_es.submit(r).get();
    }
 catch (    Exception e) {
      Throwables.propagate(e);
    }
  }
 else {
    m_es.execute(r);
  }
}
