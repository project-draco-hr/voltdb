{
  if (!contains(s,m_tsvEscapeChars)) {
    return s;
  }
  StringBuilder sb=new StringBuilder(s.length() + (int)(s.length() * .10));
  for (int ii=0; ii < s.length(); ii++) {
    char c=s.charAt(ii);
    if (c == '\\') {
      sb.append("\\\\");
    }
 else     if (c == '\t') {
      sb.append("\\t");
    }
 else     if (c == '\n') {
      sb.append("\\n");
    }
 else     if (c == '\r') {
      sb.append("\\r");
    }
 else {
      sb.append(c);
    }
  }
  return sb.toString();
}
