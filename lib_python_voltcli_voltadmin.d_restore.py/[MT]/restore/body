@VOLT.Client(description='Restore a VoltDB database snapshot.', cli_options=(VOLT.CLIValue('-d', '--directory', 'directory', 'the local snapshot directory path', required=True), VOLT.CLIValue('-i', '--id', 'nonce', 'the unique snapshot identifier (nonce)', required=True)))
def restore(runner):
    proc = VOLT.VoltProcedure(runner.client, '@SnapshotRestore', [VOLT.FastSerializer.VOLTTYPE_STRING, VOLT.FastSerializer.VOLTTYPE_STRING])
    response = proc.call(params=(runner.opts.directory, runner.opts.nonce))
    print response
