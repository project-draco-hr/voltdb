@VOLT.Admin_Client(description='Restore a VoltDB database snapshot.', arguments=(VOLT.StringArgument('directory', 'the local snapshot directory path'), VOLT.StringArgument('nonce', 'the unique snapshot identifier (nonce)')))
def restore(runner):
    runner.call_sysproc('@SnapshotRestore', [VOLT.FastSerializer.VOLTTYPE_STRING, VOLT.FastSerializer.VOLTTYPE_STRING], [runner.opts.directory, runner.opts.nonce])
    utility.info('The snapshot was restored.')
