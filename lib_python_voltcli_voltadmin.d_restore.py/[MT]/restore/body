@VOLT.Admin_Client(description='Restore a VoltDB database snapshot.', arguments=(VOLT.StringArgument('directory', 'the local snapshot directory path'), VOLT.StringArgument('nonce', 'the unique snapshot identifier (nonce)')))
def restore(runner):
    proc = VOLT.VoltProcedure(runner.client, '@SnapshotRestore', [VOLT.FastSerializer.VOLTTYPE_STRING, VOLT.FastSerializer.VOLTTYPE_STRING])
    response = proc.call(params=(runner.opts.directory, runner.opts.nonce))
    print response
