{
  try {
    if (m_hostAlive) {
      Thread.sleep(1000);
synchronized (this) {
        if (!m_continue.get())         return;
        m_cluster.shutDownSingleHost(m_currentHost);
      }
      m_hostAlive=false;
      Thread.sleep(1000);
    }
 else {
      boolean success=true;
synchronized (this) {
        if (!m_continue.get())         return;
        success=m_cluster.recoverOne(m_currentHost,null,"localhost");
      }
      m_tryKills++;
      if (success) {
        m_hostAlive=true;
        m_currentHost=(m_currentHost + 1) % m_cluster.getNodeCount();
        m_tryKills=0;
      }
      if (m_tryKills >= 6)       System.exit(-1);
    }
  }
 catch (  InterruptedException e) {
    e.printStackTrace();
    System.exit(-1);
  }
}
