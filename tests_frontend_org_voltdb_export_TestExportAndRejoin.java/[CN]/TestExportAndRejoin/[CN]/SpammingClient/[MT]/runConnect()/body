{
  try {
    m_client.createConnection("localhost",VoltDB.DEFAULT_PORT + m_hostId);
    m_up=true;
    System.out.printf("Host %d (re)connected\n",m_hostId);
  }
 catch (  Exception e) {
    System.out.printf("Host %d still unreacable\n",m_hostId);
    try {
      Thread.sleep(1000);
    }
 catch (    InterruptedException e1) {
    }
  }
}
