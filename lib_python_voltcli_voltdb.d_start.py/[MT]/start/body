@VOLT.Command(bundles=VOLT.ServerBundle('probe', needs_catalog=False, supports_live=False, default_host=False, safemode_available=True, supports_daemon=True, supports_multiple_daemons=True, check_environment_config=True, force_voltdb_create=False, supports_paused=True, is_legacy_verb=False), options=(VOLT.StringListOption('-H', '--host', 'server_list', server_list_help, default=''), VOLT.IntegerOption('-c', '--count', 'hostcount', 'number of hosts in the cluster', default=1), VOLT.StringOption('-D', '--dir', 'directory_spec', voltdbroot_help, default=None)), description='Starts a database, which has been initialized.')
def start(runner):
    if runner.opts.directory_spec:
        runner.args.extend(['voltdbroot', runner.opts.directory_spec])
    if (not runner.opts.server_list):
        runner.abort_with_help('You must specify the --host option.')
    runner.args.extend(['mesh', ','.join(runner.opts.server_list)])
    runner.args.extend(['hostcount', runner.opts.hostcount])
    runner.go()
