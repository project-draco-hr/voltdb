{
  m_file=file;
  m_tempFile=new File(m_file.getParentFile(),m_file.getName() + ".incomplete");
  RandomAccessFile ras=new RandomAccessFile(m_tempFile,"rw");
  m_fc=ras.getChannel();
  m_es=MoreExecutors.listeningDecorator(Executors.newSingleThreadExecutor(new ThreadFactory(){
    @Override public Thread newThread(    Runnable r){
      return new Thread(Thread.currentThread().getThreadGroup(),r,"Snapshot write thread for " + m_file,131072);
    }
  }
));
}
