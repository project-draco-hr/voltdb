{
  String realpath=path;
  if (path.startsWith("/"))   realpath=path.substring(1);
  String[] parts=realpath.split("/",2);
  if (parts[0].length() == 0)   return this;
  if (parts.length == 1)   return getItemForPathPart(parent,parts[0]);
  CatalogType nextParent=getItemForPathPart(parent,parts[0]);
  if (nextParent == null)   throw new CatalogException("couldn't find next child in path.");
  return getItemForPath(nextParent,parts[1]);
}
