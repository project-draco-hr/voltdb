{
  while (true) {
    try {
      selector.select();
    }
 catch (    IOException e) {
      exitWithException("Can't select a new socket",e);
    }
    if (testFinished.get() == true) {
      return;
    }
    System.out.println("FOUND ONE");
    for (    SelectionKey key : selector.selectedKeys()) {
      if (!key.isValid()) {
        continue;
      }
      if (key.isReadable()) {
        getStatsMessage((DatagramChannel)key.channel());
      }
    }
  }
}
