{
synchronized (this) {
    try {
      Channel channel=System.inheritedChannel();
      if (channel instanceof ServerSocketChannel)       _acceptChannel=(ServerSocketChannel)channel;
 else       Log.warn("Unable to use System.inheritedChannel() [" + channel + "]. Trying a new ServerSocketChannel at "+ getHost()+ ":"+ getPort());
      if (_acceptChannel != null)       _acceptChannel.configureBlocking(false);
    }
 catch (    NoSuchMethodError e) {
      Log.warn("Need at least Java 5 to use socket inherited from xinetd/inetd.");
    }
    if (_acceptChannel == null)     super.open();
  }
}
