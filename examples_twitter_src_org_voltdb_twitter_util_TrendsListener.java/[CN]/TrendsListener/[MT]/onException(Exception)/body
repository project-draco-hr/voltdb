{
  if (e instanceof TwitterException) {
    if (((TwitterException)e).getStatusCode() == 401) {
      System.err.println("Invalid Twitter credentials. Did you edit build.xml?");
    }
 else {
      System.err.println("An unknown error occurred:");
      e.printStackTrace();
    }
  }
 else {
    System.err.println("An unknown error occurred:");
    e.printStackTrace();
  }
  System.exit(-1);
}
