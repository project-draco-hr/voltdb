{
  String username=System.getProperty("user.name");
  java.sql.ResultSet rs;
  try {
    rs=m_stmt.executeQuery("select count(*) from `users` where `username` = '" + username + "';");
    if (rs.next()) {
      if (rs.getInt(1) != 1) {
        int rows=m_stmt.executeUpdate("insert into `users` (`username`) values ('" + username + "')");
        if (rows != 1)         throw new RuntimeException();
      }
    }
 else {
      throw new RuntimeException();
    }
  }
 catch (  SQLException e) {
    e.printStackTrace();
  }
  return username;
}
