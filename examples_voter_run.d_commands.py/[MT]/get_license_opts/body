def get_license_opts(runner):
    '\n    Get license options from verb option or from hard-coded path if applicable.\n    '
    opts = []
    path = getattr(runner.opts, 'license', None)
    if path:
        opts = ['-l', path]
    elif os.path.exists('../../voltdb/license.xml'):
        opts = ['-l', '../../voltdb/license.xml']
    return opts
