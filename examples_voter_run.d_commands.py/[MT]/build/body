@VOLT.Command(description='Build the Voter application and catalog.', cli_options=VOLT.CLIBoolean('-c', '--conditional', 'conditional', 'only build when the catalog file is missing'))
def build(runner):
    if ((not runner.opts.conditional) or (not runner.catalog_exists())):
        VOLT.java.compile('obj', 'src/voter/*.java', 'src/voter/procedures/*.java')
    if runner.opts.conditional:
        VOLT.volt.compile('-c')
    else:
        VOLT.volt.compile()
