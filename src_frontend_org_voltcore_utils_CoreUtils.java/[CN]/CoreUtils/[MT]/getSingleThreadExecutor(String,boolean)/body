{
  if (mediumStack) {
    ExecutorService ste=Executors.newSingleThreadExecutor(CoreUtils.getThreadFactory(null,name,MEDIUM_STACK_SIZE,false,null));
    return MoreExecutors.listeningDecorator(ste);
  }
 else {
    ExecutorService ste=Executors.newSingleThreadExecutor(CoreUtils.getThreadFactory(null,name,SMALL_STACK_SIZE,false,null));
    return MoreExecutors.listeningDecorator(ste);
  }
}
