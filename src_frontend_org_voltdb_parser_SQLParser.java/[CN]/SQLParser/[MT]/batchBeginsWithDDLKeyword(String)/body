{
  BufferedReader reader=new BufferedReader(new StringReader(batch));
  String line;
  try {
    while ((line=reader.readLine()) != null) {
      line=SingleLineComments.matcher(line).replaceAll("");
      line=line.trim();
      if (line.equals(""))       continue;
      return queryIsDDL(line);
    }
  }
 catch (  IOException e) {
    assert(false);
  }
  return false;
}
