def format_epilog(self, formatter):
    max_verb_width = 0
    for verb in vcli_meta.verbs:
        max_verb_width = max(max_verb_width, len(verb.name))
    fmt = ('%%-%ds  %%s' % max_verb_width)
    return ('\nCOMMAND is one of the following:\n\n%s\n' % '\n'.join([(fmt % (verb.name, verb.metadata.description)) for verb in vcli_meta.verbs]))
