{
  for (int i=0; i < SITE_COUNT; ++i) {
    final int site_id=i;
    m_siteThreads[i]=new Thread(new Runnable(){
      @Override public void run(){
        m_sites[site_id].runLoop(loopUntilPoison);
      }
    }
,"Site: " + site_id);
  }
  for (int i=0; i < SITE_COUNT; ++i) {
    m_siteThreads[i].start();
  }
}
