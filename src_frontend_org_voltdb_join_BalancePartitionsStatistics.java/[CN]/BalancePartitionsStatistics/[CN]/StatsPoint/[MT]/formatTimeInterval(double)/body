{
  try {
    if (dms < 0.0) {
      throw new RuntimeException("Bad dms argument");
    }
    final long day=MILLISECONDS.toDays((long)dms);
    final long hr=MILLISECONDS.toHours((long)dms - DAYS.toMillis(day));
    final long min=MILLISECONDS.toMinutes((long)dms - DAYS.toMillis(day) - HOURS.toMillis(hr));
    final long sec=MILLISECONDS.toSeconds((long)dms - DAYS.toMillis(day) - HOURS.toMillis(hr)- MINUTES.toMillis(min));
    final long ms=MILLISECONDS.toMillis((long)dms - DAYS.toMillis(day) - HOURS.toMillis(hr)- MINUTES.toMillis(min)- SECONDS.toMillis(sec));
    return String.format("%d %02d:%02d:%02d.%03d",day,hr,min,sec,ms);
  }
 catch (  Exception e) {
    e.printStackTrace();
    return String.format("???%f???",dms);
  }
}
