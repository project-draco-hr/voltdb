{
  StringBuilder query=new StringBuilder("SELECT ");
  for (int iColumn=0; iColumn < this.nColumns; ++iColumn) {
    if (iColumn > 0) {
      query.append(", ");
    }
    query.append(helper.columnName(helper.getShuffledNumber(iColumn)));
  }
  query.append(" FROM ").append(this.tablePrefix).append(" WHERE ").append(helper.columnName(helper.getShuffledNumber(0))).append(" = 'abc'");
  return query.toString();
}
