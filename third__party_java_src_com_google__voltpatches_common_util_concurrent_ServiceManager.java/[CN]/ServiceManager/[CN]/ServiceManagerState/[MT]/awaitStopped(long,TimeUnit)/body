{
  monitor.enter();
  try {
    if (!monitor.waitForUninterruptibly(stoppedGuard,timeout,unit)) {
      throw new TimeoutException("Timeout waiting for the services to stop. The following " + "services have not stopped: " + Multimaps.filterKeys(servicesByState,not(in(ImmutableSet.of(TERMINATED,FAILED)))));
    }
  }
  finally {
    monitor.leave();
  }
}
