import signal
import unittest
import datetime
import decimal
import socket
import threading
import struct
import sys
import subprocess
import time
from fastserializer import *
SERVER_NAME = 'EchoServer'
decimal.getcontext().prec = 19
if (__name__ == '__main__'):
    if (len(sys.argv) < 2):
        sys.exit((-1))
    lock = threading.Event()
    echo = EchoServer(sys.argv[1], lock)
    handler = (lambda x, y: signalHandler(echo, x, y))
    signal.signal(signal.SIGINT, handler)
    echo.start()
    lock.wait()
    del sys.argv[1]
    try:
        unittest.main()
    except SystemExit:
        pass
    echo.shutdown()
    echo.join()
