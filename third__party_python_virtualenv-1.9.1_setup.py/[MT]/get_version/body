def get_version():
    f = open(os.path.join(here, 'virtualenv.py'))
    version_file = f.read()
    f.close()
    version_match = re.search('^__version__ = [\'\\"]([^\'\\"]*)[\'\\"]', version_file, re.M)
    if version_match:
        return version_match.group(1)
    raise RuntimeError('Unable to find version string.')
