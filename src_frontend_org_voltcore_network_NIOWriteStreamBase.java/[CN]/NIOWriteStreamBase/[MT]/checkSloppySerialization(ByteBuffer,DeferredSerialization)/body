{
  if (buf.limit() != buf.capacity()) {
    boolean assertOn=false;
    assert(assertOn=true);
    if (assertOn) {
      networkLog.fatal("Sloppy serialization size for message class " + ds);
      System.exit(-1);
    }
    RateLimitedLogger.tryLogForMessage("Sloppy serialization size for message class " + ds,System.currentTimeMillis(),1,TimeUnit.HOURS,networkLog,Level.WARN);
  }
}
