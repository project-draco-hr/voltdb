{
  if (nchar[0] == '-') {
    return kStateReadingCommentDelim;
  }
 else   if (nchar[0] == '\n') {
    m_currLineNo+=1;
    retval.statement+="\n";
  }
 else   if (nchar[0] == '\r') {
  }
 else   if (nchar[0] == ';') {
    retval.statement+=nchar[0];
    return kStateCompleteStatement;
  }
 else   if (nchar[0] == '\'') {
    retval.statement+=nchar[0];
    return kStateReadingStringLiteral;
  }
 else {
    retval.statement+=nchar[0];
  }
  return kStateReading;
}
