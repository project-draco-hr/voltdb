@patch.object(jenkins.Jenkins, 'jenkins_open')
@patch.object(jenkins.Jenkins, 'run_script')
def test_install_plugin_without_dependencies(self, run_script_mock, jenkins_mock):
    'Verify install plugins without dependencies\n        '
    j = jenkins.Jenkins(self.make_url(''), 'test', 'test')
    j.install_plugin('jabber', include_dependencies=False)
    self.assertEqual(len(run_script_mock.call_args_list), 2)
    self.assertEqual(run_script_mock.call_args_list[0][0][0], 'Jenkins.instance.updateCenter.getPlugin("jabber").deploy();')
    self.assertEqual(run_script_mock.call_args_list[1][0][0], 'Jenkins.instance.updateCenter.isRestartRequiredForCompletion()')
