{
  validateInputNotNull(value,context);
  final boolean matches=regexPattern.matcher((String)value).matches();
  if (!matches) {
    final String msg=REGEX_MSGS.get(regex);
    if (msg == null) {
      throw new SuperCsvConstraintViolationException(String.format("'%s' does not match the regular expression '%s'",value,regex),context,this);
    }
 else {
      throw new SuperCsvConstraintViolationException(String.format("'%s' does not match the constraint '%s' defined by the regular expression '%s'",value,msg,regex),context,this);
    }
  }
  return next.execute(value,context);
}
