{
  ClientStats stats=periodicStatsContext.fetchAndResetBaseline().getStats();
  long now=stats.getEndTimestamp();
  long time=Math.round((now - benchmarkStartTS) / 1000.0);
  System.out.printf("%02d:%02d:%02d ",time / 3600,(time / 60) % 60,time % 60);
  System.out.printf("Throughput %d/s, ",stats.getTxnThroughput());
  System.out.printf("Aborts/Failures %d/%d, ",stats.getInvocationAborts(),stats.getInvocationErrors());
  System.out.printf("Avg/99.999%% Latency %.2f/%dms\n",stats.getAverageLatency(),stats.kPercentileLatency(0.99999));
  logMetric(stats);
}
