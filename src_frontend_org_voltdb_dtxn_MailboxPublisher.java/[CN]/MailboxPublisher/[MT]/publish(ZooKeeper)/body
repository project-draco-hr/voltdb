{
  try {
    byte payload[]=m_mailboxes.toString(4).getBytes("UTF-8");
    if (!publishedOnce) {
      zk.create(m_publishPath,payload,Ids.OPEN_ACL_UNSAFE,CreateMode.EPHEMERAL);
      publishedOnce=true;
    }
 else {
      zk.setData(m_publishPath,payload,-1);
    }
  }
 catch (  Exception e) {
    throw new RuntimeException(e);
  }
}
