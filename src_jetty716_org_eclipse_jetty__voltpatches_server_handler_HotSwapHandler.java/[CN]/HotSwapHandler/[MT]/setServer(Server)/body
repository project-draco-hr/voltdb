{
  Server old_server=getServer();
  if (server == old_server)   return;
  if (isRunning())   throw new IllegalStateException(RUNNING);
  super.setServer(server);
  Handler h=getHandler();
  if (h != null)   h.setServer(server);
  if (server != null && server != old_server)   server.getContainer().update(this,null,_handler,"handler");
}
