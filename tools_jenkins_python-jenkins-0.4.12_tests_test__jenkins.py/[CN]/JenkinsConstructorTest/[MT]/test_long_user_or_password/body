def test_long_user_or_password(self):
    long_str = ('a' * 60)
    long_str_b64 = ('YWFh' * 20)
    j = jenkins.Jenkins('{0}'.format(self.base_url), long_str, long_str)
    self.assertNotIn('\n', j.auth)
    self.assertEqual(j.auth.decode('utf-8'), ('Basic %s' % (((long_str_b64 + 'Om') + long_str_b64[2:]) + 'YQ==')))
