{
  String upcmd=command.toUpperCase();
  try {
    VoltDB.START_ACTION action=VoltDB.START_ACTION.valueOf(upcmd);
  }
 catch (  IllegalArgumentException iae) {
    String msg="Unknown action: " + command + ". ";
    hostLog.warn(msg);
    throw new IllegalArgumentException(msg);
  }
  return this;
}
