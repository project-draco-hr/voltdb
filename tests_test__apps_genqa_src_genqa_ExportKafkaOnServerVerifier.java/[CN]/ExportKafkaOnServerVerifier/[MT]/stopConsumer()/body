{
  for (  RemoteHost rh : m_hosts) {
    if (rh != null) {
      if (rh.consumer != null) {
        try {
          System.out.println("Committing offsets to zookeeper.");
          rh.consumer.commitOffsets();
          Thread.sleep(1100);
        }
 catch (        InterruptedException ex) {
        }
      }
      rh.stop();
    }
  }
}
