{
  int pos=m_buffer.position();
  size+=HEADER_SIZE;
  if (m_buffer.capacity() >= size)   m_buffer.limit(size);
 else {
    m_buffer.rewind();
    BBContainer c=pool.acquire(size * 2);
    c.b.limit(size);
    c.b.put(m_buffer);
    c.b.position(pos);
    if (m_container != null) {
      m_container.discard();
    }
    m_buffer=c.b;
    m_container=c;
  }
}
