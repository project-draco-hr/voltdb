{
  if (oldType == newType) {
    return (oldSize <= newSize);
  }
  if ((oldType == VoltType.TIMESTAMP) && (newType == VoltType.BIGINT)) {
    return true;
  }
  if (oldType == VoltType.INTEGER) {
    if (newType == VoltType.BIGINT) {
      return true;
    }
  }
  if (oldType == VoltType.SMALLINT) {
    if ((newType == VoltType.BIGINT) || (newType == VoltType.INTEGER)) {
      return true;
    }
  }
  if (oldType == VoltType.TINYINT) {
    if ((newType == VoltType.BIGINT) || (newType == VoltType.INTEGER) || (newType == VoltType.SMALLINT)) {
      return true;
    }
  }
  if (newType == VoltType.FLOAT) {
    if ((newType == VoltType.INTEGER) || (newType == VoltType.SMALLINT) || (newType == VoltType.TINYINT)) {
      return true;
    }
  }
  return false;
}
