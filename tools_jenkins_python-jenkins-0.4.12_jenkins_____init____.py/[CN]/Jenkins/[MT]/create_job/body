def create_job(self, name, config_xml):
    'Create a new Jenkins job\n\n        :param name: Name of Jenkins job, ``str``\n        :param config_xml: config file text, ``str``\n        '
    (folder_url, short_name) = self._get_job_folder(name)
    if self.job_exists(name):
        raise JenkinsException(('job[%s] already exists' % name))
    try:
        self.jenkins_open(Request(self._build_url(CREATE_JOB, locals()), config_xml.encode('utf-8'), DEFAULT_HEADERS))
    except NotFoundException:
        raise JenkinsException(('Cannot create job[%s] because folder for the job does not exist' % name))
    self.assert_job_exists(name, 'create[%s] failed')
