def install_plugin(self, name, include_dependencies=True):
    'Install a plugin and its dependencies from the Jenkins public\n        repository at http://repo.jenkins-ci.org/repo/org/jenkins-ci/plugins\n\n        :param name: The plugin short name, ``string``\n        :param include_dependencies: Install the plugin\'s dependencies, ``bool``\n        :returns: Whether a Jenkins restart is required, ``bool``\n\n        Example::\n            >>> info = server.install_plugin("jabber")\n            >>> print(info)\n            True\n        '
    install = (('Jenkins.instance.updateCenter.getPlugin("' + name) + '").deploy();')
    if include_dependencies:
        install = ((('Jenkins.instance.updateCenter.getPlugin("' + name) + '").getNeededDependencies().each{it.deploy()};') + install)
    self.run_script(install)
    time.sleep(2)
    is_restart_required = 'Jenkins.instance.updateCenter.isRestartRequiredForCompletion()'
    response_str = self.run_script(is_restart_required)
    response = (response_str.split(':')[1].strip().lower() == 'true')
    return response
