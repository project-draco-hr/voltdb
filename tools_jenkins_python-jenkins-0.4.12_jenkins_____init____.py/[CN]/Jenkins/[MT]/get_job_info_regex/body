def get_job_info_regex(self, pattern, depth=0, folder_depth=0):
    'Get a list of jobs information that contain names which match the\n           regex pattern.\n\n        :param pattern: regex pattern, ``str``\n        :param depth: JSON depth, ``int``\n        :param folder_depth: folder level depth to search ``int``\n        :returns: List of jobs info, ``list``\n        '
    result = []
    jobs = self.get_all_jobs(folder_depth)
    for job in jobs:
        if re.search(pattern, job['name']):
            result.append(self.get_job_info(job['name'], depth=depth))
    return result
