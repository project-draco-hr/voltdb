def get_node_info(self, name, depth=0):
    'Get node information dictionary\n\n        :param name: Node name, ``str``\n        :param depth: JSON depth, ``int``\n        :returns: Dictionary of node info, ``dict``\n        '
    try:
        response = self.jenkins_open(Request(self._build_url(NODE_INFO, locals())))
        if response:
            return json.loads(response)
        else:
            raise JenkinsException(('node[%s] does not exist' % name))
    except HTTPError:
        raise JenkinsException(('node[%s] does not exist' % name))
    except ValueError:
        raise JenkinsException(('Could not parse JSON info for node[%s]' % name))
