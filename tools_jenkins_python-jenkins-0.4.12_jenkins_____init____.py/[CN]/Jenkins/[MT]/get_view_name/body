def get_view_name(self, name):
    'Return the name of a view using the API.\n\n        That is roughly an identity method which can be used to quickly verify\n        a view exists or is accessible without causing too much stress on the\n        server side.\n\n        :param name: View name, ``str``\n        :returns: Name of view or None\n        '
    try:
        response = self.jenkins_open(Request(self._build_url(VIEW_NAME, locals())))
    except NotFoundException:
        return None
    else:
        actual = json.loads(response)['name']
        if (actual != name):
            raise JenkinsException(('Jenkins returned an unexpected view name %s (expected: %s)' % (actual, name)))
        return actual
