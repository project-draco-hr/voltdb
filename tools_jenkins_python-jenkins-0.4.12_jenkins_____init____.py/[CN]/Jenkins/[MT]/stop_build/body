def stop_build(self, name, number):
    'Stop a running Jenkins build.\n\n        :param name: Name of Jenkins job, ``str``\n        :param number: Jenkins build number for the job, ``int``\n        '
    (folder_url, short_name) = self._get_job_folder(name)
    self.jenkins_open(Request(self._build_url(STOP_BUILD, locals()), ''))
