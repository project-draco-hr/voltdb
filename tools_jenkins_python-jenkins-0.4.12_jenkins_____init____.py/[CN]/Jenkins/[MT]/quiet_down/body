def quiet_down(self):
    'Prepare Jenkins for shutdown.\n\n        No new builds will be started allowing running builds to complete\n        prior to shutdown of the server.\n        '
    request = Request(self._build_url(QUIET_DOWN))
    self.jenkins_open(request)
    info = self.get_info()
    if (not info['quietingDown']):
        raise JenkinsException('quiet down failed')
