def getQueryClient():
    host = defaultHost
    port = defaultPort
    client = None
    for i in xrange(25):
        try:
            client = VoltQueryClient(host, port)
            client.set_quiet(True)
            client.set_timeout(5.0)
            return client
        except socket.error:
            time.sleep(1)
    if (client == None):
        print  >> sys.stderr, 'Unable to connect python client to server'
        sys.stderr.flush()
        return None
    return client
