def getClient():
    host = defaultHost
    port = defaultPort
    client = None
    for i in xrange(10):
        try:
            client = VoltQueryClient(host, port)
            client.set_quiet(True)
            client.set_timeout(5.0)
            break
        except socket.error:
            time.sleep(1)
    if (client == None):
        print  >> sys.stderr, 'Unable to connect/create client'
        sys.stderr.flush()
        exit(1)
    return client
