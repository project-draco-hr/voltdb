{
  quiesce(client);
  while (true) {
    try {
      tester.work();
    }
 catch (    ExportClientException e) {
      tester.disconnect();
      tester.reserveVerifiers();
      boolean success=tester.connect();
      assertTrue(success);
      System.out.println(e.toString());
      continue;
    }
    break;
  }
  assertTrue(tester.allRowsVerified());
  assertTrue(tester.verifyExportOffsets());
}
