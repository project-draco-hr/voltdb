{
  int pkeyColIndex=0;
  if (t.m_originalColumnInfos != null) {
    for (int i=0; i < t.getColumnCount(); i++) {
      if (t.m_originalColumnInfos[i].pkeyIndex == 0) {
        pkeyColIndex=i;
      }
      if (t.m_originalColumnInfos[i].pkeyIndex > 0) {
        return -1;
      }
    }
    if (t.m_originalColumnInfos[pkeyColIndex].type == VoltType.BIGINT) {
      return pkeyColIndex;
    }
  }
  return -1;
}
