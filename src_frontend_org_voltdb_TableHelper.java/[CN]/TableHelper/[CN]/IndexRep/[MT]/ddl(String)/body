{
  String ddl="CREATE ";
  ddl+=unique ? "UNIQUE " : "";
  ddl+="INDEX " + indexName + " ON ";
  ddl+=table.m_name + " (";
  String[] colNames=new String[columns.length];
  for (int i=0; i < columns.length; i++) {
    colNames[i]=table.getColumnName(columns[i]);
  }
  ddl+=StringUtils.join(colNames,", ") + ");";
  return ddl;
}
