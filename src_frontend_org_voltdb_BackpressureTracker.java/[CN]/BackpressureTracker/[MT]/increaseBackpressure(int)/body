{
  m_pendingTxnBytes+=messageSize;
  m_pendingTxnCount++;
  if (m_pendingTxnBytes > MAX_DESIRED_PENDING_BYTES || m_pendingTxnCount > MAX_DESIRED_PENDING_TXNS) {
    if (!m_hadBackPressure) {
      hostLog.info("TXN back pressure began");
      m_hadBackPressure=true;
      m_ci.onBackPressure();
    }
  }
}
