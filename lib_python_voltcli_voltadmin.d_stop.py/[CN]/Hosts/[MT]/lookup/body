def lookup(self, *host_names):
    '\n        Lookup host name(s) and return found and unused host objects,\n        plus a list of the host names that are missing. The unused host\n        list is arbitrarily ordered.\n        '
    found = []
    unused = []
    missing = set(host_names)
    for host in self.hosts_by_id.values():
        if (host.hostname in host_names):
            found.append(host)
            missing.remove(host.hostname)
        else:
            unused.append(host)
    return (found, unused, sorted(list(missing)))
