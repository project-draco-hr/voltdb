{
  wasCrashCalled=true;
  crashMessage=errMsg;
  if (ignoreCrash) {
    return;
  }
  try {
    ((HostMessenger)instance().getMessenger()).sendPoisonPill(errMsg);
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
  try {
    Thread.sleep(500);
  }
 catch (  InterruptedException e) {
  }
  crashLocalVoltDB(errMsg,stackTrace,t);
}
