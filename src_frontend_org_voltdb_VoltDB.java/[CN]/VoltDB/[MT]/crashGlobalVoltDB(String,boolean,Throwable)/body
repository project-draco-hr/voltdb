{
  wasCrashCalled=true;
  crashMessage=errMsg;
  if (ignoreCrash) {
    throw new AssertionError("Faux crash of VoltDB successful.");
  }
  try {
    instance().getHostMessenger().sendPoisonPill(errMsg);
    Thread.sleep(500);
  }
 catch (  Exception e) {
    e.printStackTrace();
    try {
      Thread.sleep(500);
    }
 catch (    InterruptedException e2) {
    }
  }
 finally {
    crashLocalVoltDB(errMsg,stackTrace,t);
  }
}
