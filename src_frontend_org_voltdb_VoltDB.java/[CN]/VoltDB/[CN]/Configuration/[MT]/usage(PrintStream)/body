{
  String message="";
  if (org.voltdb.utils.MiscUtils.isPro()) {
    message="Usage: voltdb3 create catalog <catalog.jar> [host <hostname>] [deployment <deployment.xml>] license <license.xml>\n" + "       voltdb3 replica catalog <catalog.jar> [host <hostname>] [deployment <deployment.xml>] license <license.xml> \n" + "       voltdb3 recover [host <hostname>] [deployment <deployment.xml>] license <license.xml>\n"+ "       voltdb3 [live] rejoin host <hostname>\n"+ "       voltdb3 add host <hostname>\n";
  }
 else {
    message="Usage: voltdb3 create  catalog <catalog.jar> [host <hostname>] [deployment <deployment.xml>]\n" + "       voltdb3 recover [host <hostname>] [deployment <deployment.xml>]\n" + "       voltdb3 rejoin host <hostname>\n";
  }
  message+="       voltdb3 collect [<option> ...] <path-to-voltdbroot> (run voltdb3 collect -h for more details)\n";
  message+="       voltdb3 compile [<option> ...] [<ddl-file> ...]  (run voltdb3 compile -h for more details)\n";
  os.print(message);
  hostLog.info(message);
  os.println("If no deployment is specified, a default 1 node cluster deployment will be configured.");
}
