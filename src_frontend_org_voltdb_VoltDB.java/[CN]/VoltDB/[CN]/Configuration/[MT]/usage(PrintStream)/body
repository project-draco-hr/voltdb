{
  String message="";
  if (org.voltdb.utils.MiscUtils.isPro()) {
    message="Usage: voltdb create [leader <hostname>] [deployment <deployment.xml>] license <license.xml> catalog <catalog.jar>\n" + "       voltdb recover [leader <hostname>] [deployment <deployment.xml>] license <license.xml>\n" + "       voltdb replica [leader <hostname>] [deployment <deployment.xml>] license <license.xml> catalog <catalog.jar>\n";
  }
 else {
    message="Usage: voltdb create [leader <hostname>] [deployment <deployment.xml>] catalog <catalog.jar>\n" + "       voltdb recover [leader <hostname>] [deployment <deployment.xml>]\n";
  }
  os.print(message);
  hostLog.info(message);
  os.println("If action is not specified the default is to 'recover' the database if a snapshot is present otherwise 'create'.");
  os.println("If no deployment is specified, a default 1 node cluster deployment will be configured.");
}
