def write_schema(tables, f):
    messages = []
    for table_name in tables:
        write_schema_table(tables[table_name], f, messages)
        f.write('\n')
    if messages:
        f.write('-- ::: Notes :::\n')
        for i in range(len(messages)):
            f.write(('-- (%d) %s\n' % ((i + 1), MESSAGES[messages[i]])))
