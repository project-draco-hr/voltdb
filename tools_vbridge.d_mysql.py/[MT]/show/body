@VOLT.Command(description='Display project configuration settings.', description2='Displays all settings if no keys are specified.', arguments=VOLT.StringArgument('arg', 'configuration key(s)', min_count=0, max_count=None))
def show(runner):
    if (not runner.opts.arg):
        for (key, value) in runner.config.query_pairs():
            sys.stdout.write(('%s=%s\n' % (key, value)))
    else:
        for filter in runner.opts.arg:
            n = 0
            for (key, value) in runner.config.query_pairs(filter=filter):
                sys.stdout.write(('%s=%s\n' % (key, d[key])))
                n += 1
            if (n == 0):
                sys.stdout.write(('%s *not found*\n' % filter))
