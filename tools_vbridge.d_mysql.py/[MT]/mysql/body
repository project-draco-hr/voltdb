@VOLT.Command(description='VoltDB quick start from a live MySQL database.', description2='Run from a project directory where new files can be generated.', options=(VOLT.StringOption('-p', '--partition-table', 'partition_table', 'primary partitioning table.'),), arguments=(VOLT.StringArgument('uri', help='Database URI, e.g. mysql://user@host/database.'),))
def mysql(runner):
    initialize()
    schema_generator = MySQLSchemaGenerator(runner.opts.uri, runner.opts.partition_table)
    schema_generator.write_schema(sys.stdout)
