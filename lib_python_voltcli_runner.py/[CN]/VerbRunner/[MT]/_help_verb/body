def _help_verb(self, name):
    verb = self.verbspace.verbs[name]
    parser = self.cli_processor.create_verb_parser(verb)
    sys.stdout.write('\n')
    parser.print_help()
    if verb.cli_spec.description2:
        sys.stdout.write('\n')
        sys.stdout.write(('%s\n' % verb.cli_spec.description2.strip()))
