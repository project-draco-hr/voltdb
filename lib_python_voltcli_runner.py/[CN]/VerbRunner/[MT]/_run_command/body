def _run_command(self, verbspace, *args, **kwargs):
    processor = cli.VoltCLICommandProcessor(verbspace.verbs, base_cli_spec.cli_options, base_cli_spec.usage, '\n'.join((verbspace.description, base_cli_spec.description)), ('%%prog version %s' % verbspace.version))
    command = processor.parse(args)
    command.outer_opts = self.outer_opts
    runner = VerbRunner(command, verbspace, self.internal_verbspaces, self.config, processor, **kwargs)
    runner.execute()
